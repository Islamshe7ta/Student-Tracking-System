@model Student_Tracking_System.Models.LoginViewModel
@{
    ViewBag.Title = "Login | Student Tracking System";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewBag.Title</title>
    <link rel="icon" type="image/x-icon" href="~/IMGs/favicon.ico" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>
    <!-- Floating Particles Background -->
    <div class="particles" id="particles-js"></div>

    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "login-form" }))
    {
        @Html.AntiForgeryToken()

        <div class="login-header">
            <h1 class="text-center">LOGIN</h1>
            <p class="text-center welcome-text">Welcome back! Please enter your credentials</p>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger", @id = "error-message" })

        <div class="role-selection mb-4 my-3">
            <div class="role-options">
                <label class="role-option-label">
                    @Html.RadioButtonFor(m => m.Role, "Admin", new { @checked = "checked" })
                    <span class="role-option-content">
                        <i class="bi bi-shield-lock"></i>
                        <span>ADMIN</span>
                    </span>
                </label>
                <label class="role-option-label">
                    @Html.RadioButtonFor(m => m.Role, "Teacher")
                    <span class="role-option-content">
                        <i class="bi bi-person-video2"></i>
                        <span>TEACHER</span>
                    </span>
                </label>
                <label class="role-option-label">
                    @Html.RadioButtonFor(m => m.Role, "Student")
                    <span class="role-option-content">
                        <i class="bi bi-mortarboard"></i>
                        <span>STUDENT</span>
                    </span>
                </label>
            </div>
        </div>

        <div class="mb-4">
            @Html.LabelFor(m => m.Username, new { @class = "form-label" })
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-person"></i></span>
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Username", required = "required" })
            </div>
            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
        </div>

        <div class="mb-4">
            @Html.LabelFor(m => m.Password, new { @class = "form-label" })
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password", required = "required", id = "password" })
                <span class="input-group-text toggle-password" id="togglePassword">
                    <i class="bi bi-eye-slash"></i>
                </span>
            </div>
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            <div class="password-strength mt-2">
                <div class="progress" style="height: 4px;">
                    <div class="progress-bar" role="progressbar" style="width: 0%"></div>
                </div>
                <small class="strength-text text-muted">Password Strength</small>
            </div>
        </div>

        <div class="mb-4 d-flex justify-content-between align-items-center">
            <div class="form-check">
                @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input" })
                @Html.LabelFor(m => m.RememberMe, new { @class = "form-check-label" })
            </div>
            <div>
                @Html.ActionLink("Forgot password?", "ForgotPassword", "Account", null, new { @class = "forgot-password" })
            </div>
        </div>

        <div class="d-grid gap-2 mb-4">
            <button type="submit" class="btn login-btn">
                <span class="btn-text">Login</span>
                <span class="btn-icon"><i class="bi bi-arrow-right"></i></span>
            </button>
        </div>
    }

    <!-- Add particles.js script -->
    <script src="~/js/login.js"></script>
    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
</body>
</html>