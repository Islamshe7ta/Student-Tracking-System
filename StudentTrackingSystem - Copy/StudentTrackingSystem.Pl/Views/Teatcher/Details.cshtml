@model StudentTrackingSystem.DAL.Models.Teatcher

@{
    ViewData["Title"] = "Teacher Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudentTrackingSystem.Pl</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/ShowStudents.css" />
    <link rel="stylesheet" href="~/StudentTrackingSystem.Pl.styles.css" asp-append-version="true" />
    <style>
        .teacher-details-card {
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            background-color: rgb(193, 229, 231);
        }

        .teacher-image {
            width: 150px;
            height: 150px;
            object-fit: cover;
            border-radius: 50%;
            border: 5px solid #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .detail-label {
            font-weight: 600;
            color: #555;
        }

        .detail-value {
            font-weight: 400;
        }

        .section-divider {
            height: 1px;
            background-color: #e0e0e0;
            margin: 20px 0;
        }

        .teacher-header,
        .teacher-body {
            background-color: rgb(193, 229, 231);
            padding: 20px;
        }

        .teacher-body {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container mt-4 mb-5">
        <h2 class="section-title text-center mb-4">Teacher Details</h2>

        <div class="teacher-details-card">
            <div class="teacher-header text-center">
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <img src="@Model.ImagePath" alt="@Model.FullName" class="teacher-image mb-3">
                }
                else
                {
                    <img src="~/img/default-student.png" alt="Default Student Photo" class="teacher-image mb-3">
                }
                <h3 class="mb-1">@Model.FullName</h3>
            </div>

            <div class="teacher-body">
                <div class="row justify-content-center">
                    <div class="col-md-6 text-center">
                        <h4 class="mb-3">Personal Information</h4>

                        <div class="mb-2">
                            <span class="detail-label">Email :</span>
                            <span class="detail-value">@Model.Email</span>
                        </div>

                        <div class="mb-2">
                            <span class="detail-label">Phone :</span>
                            <span class="detail-value">@Model.PhoneNumber</span>
                        </div>

                        <div class="mb-2">
                            <span class="detail-label">Gender :</span>
                            <span class="detail-value">@Model.Gender</span>
                        </div>

                        <div class="mb-2">
                            <span class="detail-label">Date of Birth :</span>
                            <span class="detail-value">@Model.DateOfBirth.ToShortDateString()</span>
                        </div>
                    </div>
                </div>

                <div class="section-divider"></div>

                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>

        </div>
    </div>
</body>
</html>
