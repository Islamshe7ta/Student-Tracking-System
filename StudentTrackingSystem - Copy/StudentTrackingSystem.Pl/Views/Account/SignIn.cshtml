@using StudentTrackingSystem.PL.DTOs
@model SignInDTO
@{
    ViewData["Title"] = "SignIn";
    // Layout = "~/Views/Shared/_AuthLayout.cshtml";
    Layout = null;
}

<div class="main-agileinfo">
    <div class="agileits-top">
        <form asp-action="SignIn" method="post">
            <input class="text email" asp-for="Email" placeholder="Email" required="">
            <input class="text" asp-for="Password" placeholder="Password" required="">
            <div class="wthree-text">
                <label class="anim">
                    <input asp-for="RememberMy" class="checkbox">
                    <span>RememberMy</span>
                </label>
                <div class="clear"> </div>
            </div>
            <input type="submit" value="SIGNIN">
        </form>

        @* Sign In With Google *@
        <br />
        <a asp-action="Googellogin"
           style="display: block; margin: 10px auto; text-align: center; background-color: #4285F4; color: white; width: 70%; padding: 10px; border-radius: 5px; text-decoration: none; font-weight: bold;">
            <img src="https://img.icons8.com/color/24/000000/google-logo.png" style="vertical-align: middle; margin-right: 8px;" />
            Sign in with Google
        </a>



        <p>Don't have an Account? <a asp-action="SignUp"> Create New Account </a></p>
        <p><a asp-action="ForgetPassword"> Forget Password </a></p>
    </div>
</div>

<!-- Modal for Validation Errors -->
<div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="background-color: #fff3cd; color: #856404;">
            <div class="modal-header">
                <h5 class="modal-title" id="errorModalLabel">Validation Errors</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div asp-validation-summary="All" class="validation-summary-errors"></div>
            </div>
        </div>
    </div>
</div>

@section Validation
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <!-- Bootstrap JS (if not already loaded in _Layout) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const validationDiv = document.querySelector('.validation-summary-errors');
            if (validationDiv && validationDiv.innerHTML.trim() !== "") {
                const errorModal = new bootstrap.Modal(document.getElementById('errorModal'));
                errorModal.show();
            }
        });
    </script>
}

<style>
    body {
        background: linear-gradient(135deg, #667eea, #764ba2);
        font-family: Arial, sans-serif;
    }

    .main-agileinfo {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .agileits-top {
        background: rgba(255, 255, 255, 0.2);
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
        width: 100%;
        max-width: 400px;
        backdrop-filter: blur(10px);
    }

    .text {
        width: 100%;
        padding: 10px;
        margin: 10px 0;
        border-radius: 5px;
        border: none;
        background: rgba(255, 255, 255, 0.3);
        color: white;
        font-size: 16px;
    }

        .text::placeholder {
            color: rgba(255, 255, 255, 0.7);
        }

    .wthree-text {
        text-align: left;
        font-size: 14px;
        margin-bottom: 15px;
        color: white;
    }

    input[type="submit"] {
        background: #ff4081;
        color: white;
        padding: 10px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        width: 100%;
        font-size: 16px;
        transition: 0.3s;
    }

        input[type="submit"]:hover {
            background: #e91e63;
        }

    p {
        margin-top: 10px;
        font-size: 14px;
        color: white;
    }

        p a {
            color: #ff4081;
            text-decoration: none;
        }

            p a:hover {
                text-decoration: underline;
            }
</style>
