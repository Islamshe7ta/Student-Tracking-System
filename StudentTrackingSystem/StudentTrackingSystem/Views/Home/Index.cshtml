@{
    ViewData["Title"] = "Home Page";
}

<style>
    :root {
        --primary-color: rgb(161, 143, 167);
        --primary-light: rgb(212, 201, 217);
        --primary-dark: rgb(124, 105, 134);
        --accent-color: rgb(227, 194, 241);
        --text-color: rgb(58, 47, 64);
        --background-color: rgb(247, 245, 249);
    }

    body {
        background-color: var(--background-color);
        color: var(--text-color);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .hero-section {
        background: linear-gradient(rgba(161, 143, 167, 0.85), rgba(124, 105, 134, 0.9)), url('https://your-image-url.com/your-background.jpg') no-repeat center center;
        background-size: cover;
        min-height: 100vh;
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(5px);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
    }

        .hero-section h1 {
            font-weight: 800;
            color: white;
            text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.6);
        }

        .hero-section p {
            color: #f3f3f3;
            font-size: 1.25rem;
            margin-bottom: 30px;
            text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.5);
        }

        .hero-section a.btn {
            padding: 12px 30px;
            font-size: 1.2rem;
            border-radius: 10px;
            background-color: var(--accent-color);
            color: var(--text-color);
            border: none;
            transition: all 0.3s ease;
        }

            .hero-section a.btn:hover {
                background-color: var(--primary-dark);
                color: white;
            }
</style>

<div class="container-fluid vh-100">
    <div class="hero-section">
        <h1 class="display-3 animated fadeIn">Welcome to Our Platform!</h1>
        <p class="lead animated fadeIn delay-1s">
            Build modern and powerful web applications with <strong>ASP.NET Core</strong>.
        </p>

        <a href="https://learn.microsoft.com/aspnet/core" class="btn animated fadeIn delay-2s">
            <i class="bi bi-book"></i> Learn More
        </a>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
}
