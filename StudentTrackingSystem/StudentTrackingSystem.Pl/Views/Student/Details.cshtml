@{
}
@model StudentTrackingSystem.Models.Student

@{
    ViewData["Title"] = "Student Details";
}

<h2>Student Details</h2>

<div>
    <strong>Full Name:</strong> @Model.FullName
</div>
<div>
    <strong>Date of Birth:</strong> @Model.DateOfBirth
</div>
<div>
    <strong>Email Address:</strong> @Model.EmailAddress
</div>
<div>
    <strong>Phone Number:</strong> @Model.PhoneNo
</div>
<div>
    <strong>Address:</strong> @Model.Address
</div>
<div>
    <strong>Grade:</strong> @Model.Grade
</div>

<a href="@Url.Action("Edit", "Student", new { id = Model.Id })" class="btn btn-primary">Edit</a>
<a href="@Url.Action("Delete", "Student", new { id = Model.Id })" class="btn btn-danger">Delete</a>
<a href="@Url.Action("Index", "Student")" class="btn btn-secondary">Back to List</a>
