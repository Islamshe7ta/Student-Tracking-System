@model StudentDTO
@{
    ViewData["Title"] = "Student Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudentTrackingSystem.Pl</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/ShowStudents.css" />
    <link rel="stylesheet" href="~/StudentTrackingSystem.Pl.styles.css" asp-append-version="true" />
    <style>
        .student-details-card {
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .student-image {
            width: 150px;
            height: 150px;
            object-fit: cover;
            border-radius: 50%;
            border: 5px solid #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .detail-label {
            font-weight: 600;
            color: #555;
        }

        .detail-value {
            font-weight: 400;
        }

        .section-divider {
            height: 1px;
            background-color: #e0e0e0;
            margin: 20px 0;
        }

        .student-header {
            background-color: #f8f9fa;
            padding: 20px;
            border-bottom: 1px solid #e0e0e0;
        }

        .student-body {
            padding: 20px;
        }

        .parent-info {
            background-color: #f0f7ff;
            border-radius: 10px;
            padding: 15px;
        }
    </style>
</head>
<body>
    <div class="container mt-4 mb-5">
        <h2 class="section-title text-center mb-4">Student Details</h2>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="student-details-card bg-white">
            <div class="student-header text-center">
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <img src="@Model.ImagePath" alt="@Model.FullName" class="student-image mb-3">
                }
                else
                {
                    <img src="~/img/default-student.png" alt="Default Student Photo" class="student-image mb-3">
                }
                <h3 class="mb-1">@Model.FullName</h3>
                <p class="text-muted">@Model.Grade</p>
            </div>

            <div class="student-body">
                <div class="row">
                    <div class="col-md-6">
                        <h4 class="mb-3">Personal Information</h4>

                        <div class="row mb-2">
                            <div class="col-md-4 detail-label">Student ID:</div>
                            <div class="col-md-8 detail-value">@Model.StudentId</div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-md-4 detail-label">Date of Birth:</div>
                            <div class="col-md-8 detail-value">@Model.DateOfBirth.ToShortDateString()</div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-md-4 detail-label">Gender:</div>
                            <div class="col-md-8 detail-value">@Model.Gender</div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-md-4 detail-label">Grade:</div>
                            <div class="col-md-8 detail-value">@Model.Grade</div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <h4 class="mb-3">Contact Information</h4>

                        <div class="row mb-2">
                            <div class="col-md-4 detail-label">Email:</div>
                            <div class="col-md-8 detail-value">@Model.EmailAddress</div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-md-4 detail-label">Phone:</div>
                            <div class="col-md-8 detail-value">@Model.PhoneNo</div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-md-4 detail-label">Address:</div>
                            <div class="col-md-8 detail-value">@Model.Address</div>
                        </div>
                    </div>
                </div>

                <div class="section-divider"></div>

                <div class="row">
                    <div class="col-12">
                        <h4 class="mb-3">Parent Information</h4>
                        <div class="parent-info">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row mb-2">
                                        <div class="col-md-4 detail-label">Name:</div>
                                        <div class="col-md-8 detail-value">
                                            @if (!string.IsNullOrEmpty(Model.ParentName))
                                            {
                                                @Model.ParentName
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not specified</span>
                                            }
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="row mb-2">
                                        <div class="col-md-4 detail-label">Email:</div>
                                        <div class="col-md-8 detail-value">
                                            @if (!string.IsNullOrEmpty(Model.ParentEmail))
                                            {
                                                @Model.ParentEmail
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not specified</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row mb-2">
                                        <div class="col-md-4 detail-label">Phone:</div>
                                        <div class="col-md-8 detail-value">
                                            @if (!string.IsNullOrEmpty(Model.ParentPhone))
                                            {
                                                @Model.ParentPhone
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not specified</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="section-divider"></div>

                <div class="d-flex justify-content-center mt-4">
                    <a href="@Url.Action("Edit", "Student", new { id = Model.StudentId })" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <!-- Delete Button triggers modal -->
                    <button type="button"
                            class="btn btn-sm btn-outline-danger"
                            data-bs-toggle="modal"
                            data-bs-target="#deleteModal"
                            data-student-id="@Model.StudentId"
                            data-student-name="@Model.FullName">
                        <i class="bi bi-trash-fill">Delete</i>
                    </button>

                    <a href="@Url.Action("Index", "Student")" class="btn btn-secondary mx-2">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="deleteForm" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Are you sure you want to delete <strong id="studentName"></strong>?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Yes, Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        var deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var studentId = button.getAttribute('data-student-id');
            var studentName = button.getAttribute('data-student-name');

            // حط اسم الطالب في المودال
            document.getElementById('studentName').textContent = studentName;

            // حط لينك الحذف في الفورم
            var form = document.getElementById('deleteForm');
            form.action = '/Student/DeleteConfirmed/' + studentId;
        });
    </script>
</body>
</html>