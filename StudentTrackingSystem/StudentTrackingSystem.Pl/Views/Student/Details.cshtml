@model StudentDTO

@{
    ViewData["Title"] = "Student Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Student Tracking System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/custom_styles.css" /> <!-- Global custom styles -->
    <link rel="stylesheet" href="~/css/ShowStudents.css" /> 
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

</head>
<body>
    <div class="container mt-4">
        <h1 class="page-title">Student Details</h1>

        <div class="card shadow-sm student-details-card">
            <div class="card-header bg-light-blue text-white">
                <h4 class="mb-0">Information for: @Model.FullName</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 text-center mb-3 mb-md-0">
                        @if (!string.IsNullOrEmpty(Model.ImagePath))
                        {
                            <img src="@Url.Content(Model.ImagePath)" alt="@Model.FullName" class="img-fluid rounded-circle student-detail-img-large">
                        }
                        else
                        {
                            <img src="~/img/default-student.png" alt="Default Photo" class="img-fluid rounded-circle student-detail-img-large">
                        }
                    </div>
                    <div class="col-md-8">
                        <dl class="row">
                            <dt class="col-sm-4 detail-label">Full Name:</dt>
                            <dd class="col-sm-8">@Model.FullName</dd>

                            <dt class="col-sm-4 detail-label">Email Address:</dt>
                            <dd class="col-sm-8">@Model.EmailAddress</dd>

                            <dt class="col-sm-4 detail-label">Phone Number:</dt>
                            <dd class="col-sm-8">@Model.PhoneNo</dd>

                            <dt class="col-sm-4 detail-label">Address:</dt>
                            <dd class="col-sm-8">@Model.Address</dd>

                            <dt class="col-sm-4 detail-label">Grade:</dt>
                            <dd class="col-sm-8">@Model.Grade</dd>

                            <dt class="col-sm-4 detail-label">Date of Birth:</dt>
                            <dd class="col-sm-8">@Model.DateOfBirth.ToString("dd MMMM yyyy")</dd>

                            <dt class="col-sm-4 detail-label">Gender:</dt>
                            <dd class="col-sm-8">@Model.Gender</dd>
                            
                            <dt class="col-sm-4 detail-label">Parent Name:</dt>
                            <dd class="col-sm-8">@Model.ParentName</dd>
                            
                            <dt class="col-sm-4 detail-label">Parent Email:</dt>
                            <dd class="col-sm-8">@Model.ParentEmail</dd>
                            
                            <dt class="col-sm-4 detail-label">Parent Phone:</dt>
                            <dd class="col-sm-8">@Model.ParentPhone</dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="card-footer text-center action-buttons-group">
                <a asp-action="Edit" asp-controller="Student" asp-route-id="@Model.StudentId" class="btn btn-warning me-2">
                    <i class="fas fa-edit"></i> Edit Student
                </a>
                <a asp-action="Delete" asp-controller="Student" asp-route-id="@Model.StudentId" class="btn btn-danger me-2">
                    <i class="fas fa-trash-alt"></i> Delete Student
                </a>
                <a asp-action="Index" asp-controller="Student" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

<style>
    .student-details-card .card-header {
        background-color: var(--primary-color); /* Light blue */
    }
    .student-detail-img-large {
        width: 180px;
        height: 180px;
        object-fit: cover;
        border: 4px solid var(--primary-color-light); /* A lighter shade of the primary blue */
    }
    .detail-label {
        font-weight: 600;
        color: var(--primary-color-dark); /* A darker shade of blue for labels */
    }
    dl.row dd {
        margin-bottom: .5rem;
    }
</style>

