@model IEnumerable<StudentDTO>

@{
    ViewData["Title"] = "Student List";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudentTrackingSystem.Pl</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/custom_styles.css" /> <!-- Link to global custom styles -->
    <link rel="stylesheet" href="~/css/ShowStudents.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

</head>
<body>
    <div class="container mt-4" style="width:94%">
        <h1 class="page-title">All Students</h1>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="row mb-3 align-items-center">
            <div class="col-md-8">
                <label for="gradeFilter" class="form-label me-2">Filter by Grade:</label>
                <select id="gradeFilter" class="form-select d-inline-block" style="width: auto;">
                    <option value="all" selected>All Grades</option>
                    @foreach (var grade in ViewBag.Grades)
                    {
                        <option value="@grade.Name">@grade.Name</option>
                    }
                </select>
            </div>
            <div class="col-md-4 text-md-end mt-2 mt-md-0">
                <a href="@Url.Action("Create", "Student")" class="btn btn-primary">
                    <i class="fas fa-user-plus"></i> Add New Student
                </a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>Photo</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Grade</th>
                        <th>Parent</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var student in Model)
                        {
                            <tr>
                                <td data-label="Photo">
                                    @if (!string.IsNullOrEmpty(student.ImagePath))
                                    {
                                        <img src="@student.ImagePath" alt="@student.FullName" class="student-img-sm">
                                    }
                                    else
                                    {
                                        <img src="~/img/default-student.png" alt="Default Photo" class="student-img-sm">
                                    }
                                </td>
                                <td data-label="Name">@student.FullName</td>
                                <td data-label="Email">@student.EmailAddress</td>
                                <td data-label="Grade">@student.Grade</td>
                                <td data-label="Parent">@(student.ParentName ?? "N/A")</td> <!-- Display ParentName or N/A -->
                                <td data-label="Status"><span class="status-badge status-active">Active</span></td> <!-- Example Status -->
                                <td data-label="Actions" class="action-buttons-group">
                                    <a href="@Url.Action("Details", "Student", new { id = student.StudentId })" class="btn btn-info btn-sm" title="Details">
                                        <i class="bi bi-eye-fill"></i> Details
                                    </a>
                                    <a href="@Url.Action("Edit", "Student", new { id = student.StudentId })" class="btn btn-warning btn-sm" title="Edit">
                                        <i class="bi bi-pencil-fill"></i> Edit
                                    </a>
                                    <a href="@Url.Action("Delete", "Student", new { id = student.StudentId })" class="btn btn-danger btn-sm" title="Delete">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center">No students found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Basic filtering example (client-side, can be enhanced with server-side filtering)
        $(document).ready(function(){
            $("#gradeFilter").on("change", function() {
                var value = $(this).val().toLowerCase();
                if (value === "all") {
                    $("table tbody tr").show();
                } else {
                    $("table tbody tr").hide();
                    $("table tbody tr").filter(function() {
                        return $(this).find("td[data-label='Grade']").text().toLowerCase().indexOf(value) > -1;
                    }).show();
                }
            });
        });
    </script>
</body>
</html>

