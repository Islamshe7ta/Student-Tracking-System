@model IEnumerable<StudentDTO>

@{
    ViewData["Title"] = "Student List";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudentTrackingSystem.Pl</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/custom_styles.css" />
    <link rel="stylesheet" href="~/css/ShowStudents.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <style>
        /* Custom styles for action buttons */
        .action-buttons-container {
            display: flex;
            gap: 5px;
            flex-wrap: nowrap;
        }

        .action-button {
            padding: 0.25rem 0.5rem;
            font-size: 0.75rem;
            white-space: nowrap;
        }

            .action-button i {
                margin-right: 3px;
            }

        /* Status badge style */
        .status-badge {
            padding: 3px 8px;
            border-radius: 12px;
            font-size: 0.8rem;
            font-weight: 500;
        }

        .status-active {
            background-color: #d4edda;
            color: #155724;
        }

        /* Responsive filters bar */
        .filters-bar {
            display: flex;
            align-items: center;
            flex-wrap: wrap;
            gap: 10px;
        }

        .filter-group {
            display: flex;
            align-items: center;
            white-space: nowrap;
        }

        /* Push the add button to the right */
        .ms-auto {
            margin-left: auto !important;
        }

        /* Student image styling */
        .student-img-sm {
            width: 60px;
            height: 60px;
            object-fit: cover;
            border-radius: 50%;
        }

        
    </style>
</head>
<body>
    <div class="container mt-4" style="width:94%">
        <h1 class="page-title">All Students</h1>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="filters-bar mb-3">
            <div class="filter-group">
                <label for="gradeFilter" class="form-label me-2 mb-0">Filter by Grade:</label>
                <select id="gradeFilter" class="form-select d-inline-block" style="width: auto;">
                    <option value="all" selected>All Grades</option>
                    @foreach (var grade in ViewBag.Grades)
                    {
                        <option value="@grade.Name">@grade.Name</option>
                    }
                </select>
            </div>

            <div class="filter-group">
                <input type="text" id="studentSearch" class="form-control" placeholder="Search by student name..." />
            </div>

            <div class="filter-group ms-auto">
                <a href="@Url.Action("Create", "Student")" class="btn btn-primary">
                    <i class="fas fa-user-plus"></i> Add New Student
                </a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>Photo</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Grade</th>
                        <th>Parent</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var student in Model)
                        {
                            <tr>
                                <td data-label="Photo">
                                    @if (!string.IsNullOrEmpty(student.ImagePath))
                                    {
                                        <img src="@student.ImagePath" alt="@student.FullName" class="student-img-sm">
                                    }
                                    else
                                    {
                                        <img src="~/img/default-student.png" alt="Default Photo" class="student-img-sm">
                                    }
                                </td>
                                <td data-label="Name">@student.FullName</td>
                                <td data-label="Email">@student.EmailAddress</td>
                                <td data-label="Grade">@student.Grade</td>
                                <td data-label="Parent">@(student.ParentName ?? "N/A")</td>
                                <td data-label="Status"><span class="status-badge status-active">Active</span></td>
                                <td data-label="Actions">
                                    <div class="action-buttons-container">
                                        <a href="@Url.Action("Details", "Student", new { id = student.StudentId })" class="btn btn-info btn-sm action-button" title="Details">
                                            <i class="bi bi-eye-fill"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", "Student", new { id = student.StudentId })" class="btn btn-warning btn-sm action-button" title="Edit">
                                            <i class="bi bi-pencil-fill"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", "Student", new { id = student.StudentId })" class="btn btn-danger btn-sm action-button" title="Delete">
                                            <i class="bi bi-trash-fill"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center">No students found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            function applyFilters() {
                var gradeValue = $("#gradeFilter").val().toLowerCase();
                var nameValue = $("#studentSearch").val().toLowerCase();

                $("table tbody tr").hide().filter(function() {
                    var row = $(this);
                    var gradeMatch = true;
                    var nameMatch = true;

                    if (gradeValue !== "all") {
                        gradeMatch = row.find("td[data-label='Grade']").text().toLowerCase().indexOf(gradeValue) > -1;
                    }
                    if (nameValue !== "") {
                        nameMatch = row.find("td[data-label='Name']").text().toLowerCase().indexOf(nameValue) > -1;
                    }
                    return gradeMatch && nameMatch;
                }).show();
            }

            $("#gradeFilter").on("change", applyFilters);
            $("#studentSearch").on("keyup", applyFilters);
        });
    </script>
</body>
</html>