@using StudentTrackingSystem.Models
@model StudentDTO


@{
    ViewData["Title"] = "Delete Student";
}
@* @section Styles {
    <link rel="stylesheet" href="~/css/DeleteStudent.css" />
} *@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudentTrackingSystem.Pl</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/css/DeleteStudent.css" />
    <link rel="stylesheet" href="~/StudentTrackingSystem.Pl.styles.css" asp-append-version="true" />


</head>
<body>


    <h2 class="section-title text-center mb-4">Delete Student</h2>

    <div class="table-responsive mt-4">
        <table class="table table-bordered table-hover text-center">
            <thead>
                <tr>
                    <th>Student Photo</th>
                    <th>Full Name</th>
                    <th>Email Address</th>
                    <th>Grade</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(Model.ImagePath))
                        {
                            <img src="@Model.ImagePath" alt="Student Photo" class="rounded-circle" style="width: 50px; height: 50px; object-fit: cover;">
                        }
                        else
                        {
                            <img src="~/img/default-student.png" alt="Student Photo" class="rounded-circle" style="width: 50px; height: 50px; object-fit: cover;">
                        }
                    </td>
                    <td>@Model.FullName</td>
                    <td>@Model.EmailAddress</td>
                    <td>@Model.Grade</td>
                    <td>
                        <form asp-action="DeleteConfirmed" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.StudentId" />
                            <button type="submit" class="btn btn-danger btn-sm">Confirm Delete</button>
                        </form>
                        <a href="@Url.Action("Index", "Student")" class="btn btn-secondary btn-sm">Cancel</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</body>
</html>