@using StudentTrackingSystem.PL.DTOs
@model StudentDTO

@{
    ViewData["Title"] = "Add Student";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Student Tracking System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/custom_styles.css" /> <!-- Global custom styles -->
    <link rel="stylesheet" href="~/css/CreateStudent.css" /> <!-- Refactored CreateStudent styles -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

    <!-- EMBEDDED STYLES HAVE BEEN REMOVED AND MOVED TO CreateStudent.css or custom_styles.css -->
</head>
<body>
    <div class="container mt-4">
        <h1 class="page-title">Add New Student</h1>

        <form method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()

            <div class="form-container card shadow-sm p-4">
                <div class="row g-4">
                    <!-- Left Column - Student Information -->
                    <div class="col-md-6 form-section">
                        <h2 class="form-section-title">Student Information</h2>

                        <div class="form-group mb-3">
                            <label asp-for="FullName" class="form-label">Full Name</label>
                            <input asp-for="FullName" class="form-control" required />
                            <div class="invalid-feedback">Please enter the student's full name.</div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="EmailAddress" class="form-label">Email Address</label>
                            <input asp-for="EmailAddress" type="email" class="form-control" required />
                            <div class="invalid-feedback">Please enter a valid email address.</div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="PhoneNo" class="form-label">Phone Number</label>
                            <input asp-for="PhoneNo" type="tel" class="form-control" required />
                            <div class="invalid-feedback">Please enter a phone number.</div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Address" class="form-label">Address</label>
                            <input asp-for="Address" class="form-control" required />
                            <div class="invalid-feedback">Please enter an address.</div>
                        </div>

                        <!-- Parent Information -->
                        <div class="parent-info mt-4">
                            <h3 class="form-section-title">Parent Information</h3>
                            <div class="form-group mb-3">
                                <label asp-for="ParentName" class="form-label">Parent Name</label>
                                <input asp-for="ParentName" class="form-control" required />
                                <div class="invalid-feedback">Please enter the parent's name.</div>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="ParentEmail" class="form-label">Parent Email</label>
                                <input asp-for="ParentEmail" type="email" class="form-control" required />
                                <div class="invalid-feedback">Please enter a valid parent email.</div>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="ParentPhone" class="form-label">Parent Phone</label>
                                <input asp-for="ParentPhone" type="tel" class="form-control" required />
                                <div class="invalid-feedback">Please enter the parent's phone number.</div>
                            </div>
                        </div>
                    </div>

                    <!-- Right Column - Additional Information -->
                    <div class="col-md-6 form-section">
                        <h2 class="form-section-title">Additional Information</h2>
                        <!-- Student Photo -->
                        <div class="student-photo text-center mb-3">
                            <div class="photo-container mb-2">
                                <img id="photoPreview" src="~/images/profile-picture.png" alt="Student Photo Preview" class="img-fluid rounded-circle" style="width: 150px; height: 150px; object-fit: cover;">
                            </div>
                            <input type="file" id="studentImage" name="studentImage" accept="image/*" class="form-control d-none" />
                            <button type="button" class="btn btn-secondary btn-sm" id="uploadBtn"><i class="fas fa-upload"></i> Upload Photo</button>
                        </div>

                        @* <div class="form-group mb-3"> *@
                        @*     <label asp-for="Grade" class="form-label">Grade</label> *@
                        @*     <input asp-for="Grade" class="form-control" required /> *@
                        @*     <div class="invalid-feedback">Please enter the student's grade.</div> *@
                        @* </div> *@

                        <div class="form-group mb-3">
                            <label asp-for="Grade" class="form-label">Grade</label>
                            <select asp-for="Grade" class="form-control" asp-items="ViewBag.Grades">
                                <option value="">-- Select Grade --</option>
                            </select>
                            <div class="invalid-feedback">Please select a grade.</div>
                        </div>


                        <div class="form-group mb-3">
                            <label asp-for="DateOfBirth" class="form-label">Date of Birth</label>
                            <input asp-for="DateOfBirth" type="date" class="form-control" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")"/>
                            <div class="invalid-feedback">Please enter the date of birth.</div>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Gender</label>
                            <div class="gender-options">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="Gender" id="male" value="Male"/>
                                    <label class="form-check-label" for="male">Male</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="Gender" id="female" value="Female"/>
                                    <label class="form-check-label" for="female">Female</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="action-buttons mt-4 text-center">
                <button type="submit" class="btn btn-primary btn-lg me-2"><i class="fas fa-save"></i> Create Student</button>
                <a asp-action="Index" asp-controller="Student" class="btn btn-secondary btn-lg"><i class="fas fa-times-circle"></i> Cancel</a>
            </div>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();

        $(document).ready(function() {
            $('#uploadBtn').click(function() {
                $('#studentImage').click();
            });

            $('#studentImage').change(function() {
                if (this.files && this.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function(e) {
                        $('#photoPreview').attr('src', e.target.result);
                    }
                    reader.readAsDataURL(this.files[0]);
                }
            });
        });
    </script>
</body>
</html>

