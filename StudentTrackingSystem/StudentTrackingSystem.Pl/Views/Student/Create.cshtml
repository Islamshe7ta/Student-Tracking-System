<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudentTrackingSystem.Pl</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/CreateStudent.css" />
    <link rel="stylesheet" href="~/StudentTrackingSystem.Pl.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/StudentTrackingSystem.Pl.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        body {
            background-color: #ffffff;
            font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            color: #333333;
        }

        .main-container {
            max-width: 1200px;
            margin: 40px auto;
            padding: 0 20px;
        }

        .page-title {
            text-align: center;
            margin-bottom: 40px;
            font-size: 32px;
            font-weight: 600;
            color: #333333;
        }

        .form-container {
            display: flex;
            flex-wrap: wrap;
            gap: 40px;
        }

        .form-section {
            flex: 1;
            min-width: 300px;
        }

        .section-title {
            font-size: 22px;
            font-weight: 500;
            margin-bottom: 25px;
            color: #333333;
        }

        .form-group {
            margin-bottom: 25px;
        }

        .form-label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
            color: #333333;
        }

        .form-control {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #dee2e6;
            border-radius: 6px;
            font-size: 16px;
        }

        .form-control:focus {
            outline: none;
            border-color: #80bdff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

        .gender-options {
            display: flex;
            gap: 20px;
        }

        .student-photo {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-top: 20px;
        }

        .photo-container {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            overflow: hidden;
            margin-bottom: 15px;
            background-color: #f0f0f0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .photo-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .upload-btn {
            background-color: #ffffff;
            color: #007bff;
            border: 1px solid #007bff;
            border-radius: 6px;
            padding: 8px 20px;
            cursor: pointer;
            font-size: 16px;
            transition: all 0.2s;
        }

        .upload-btn:hover {
            background-color: #f8f9fa;
        }

        .action-buttons {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-top: 40px;
        }

        .btn-save {
            background-color: #198754;
            color: white;
            border: none;
            border-radius: 6px;
            padding: 10px 24px;
            font-size: 16px;
            cursor: pointer;
        }

        .btn-cancel {
            background-color: #6c757d;
            color: white;
            border: none;
            border-radius: 6px;
            padding: 10px 24px;
            font-size: 16px;
            cursor: pointer;
            text-decoration: none;
        }

        .parent-info {
            margin-top: 30px;
        }

        .default-image {
            width: 100px;
            height: 100px;
            color: #cccccc;
            font-size: 48px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
</head>
<body>
    <div class="main-container">
        <h1 class="page-title">Add Student</h1>

        <form method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div class="form-container">
                <!-- Left Column - Student Information -->
                <div class="form-section">
                    <h2 class="section-title">Student Information</h2>

                    <div class="form-group">
                        <label for="studentName" class="form-label">Full Name</label>
                        <input type="text" class="form-control" id="studentName" name="FullName" value="@Model.FullName" required />
                    </div>

                    <div class="form-group">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email" class="form-control" id="email" name="EmailAddress" value="@Model.EmailAddress" required />
                    </div>

                    <div class="form-group">
                        <label for="phone" class="form-label">Phone Number</label>
                        <input type="tel" class="form-control" id="phone" name="PhoneNo" value="@Model.PhoneNo" required />
                    </div>

                    <div class="form-group">
                        <label for="Address" class="form-label">Address</label>
                        <input type="text" class="form-control" id="Address" name="Address" value="@Model.Address" required />
                    </div>

                    <!-- Parent Information -->
                    <div class="parent-info">
                        <h2 class="section-title">Parent Information</h2>

                        <div class="form-group">
                            <label for="parentName" class="form-label">Parent Name</label>
                            <input type="text" class="form-control" id="parentName" name="ParentName" value="@Model.ParentName" required />
                        </div>

                        <div class="form-group">
                            <label for="parentEmail" class="form-label">Parent Email</label>
                            <input type="email" class="form-control" id="parentEmail" name="ParentEmail" value="@Model.ParentEmail" required />
                        </div>

                        <div class="form-group">
                            <label for="parentPhone" class="form-label">Parent Phone</label>
                            <input type="tel" class="form-control" id="parentPhone" name="ParentPhone" value="@Model.ParentPhone" required />
                        </div>
                    </div>
                </div>

                <!-- Right Column - Additional Information -->
                <div class="form-section">
                    <h2 class="section-title">Additional Information</h2>
                    <!-- Student Photo -->
                    <div class="student-photo">
                        <div class="photo-container" id="photoContainer">
                            <div class="default-image" id="defaultIcon">
                                <i class="fas fa-user"></i>
                            </div>
                            <img id="photoPreview" style="display: none;" alt="Student Photo">
                        </div>
                        <input type="file" id="studentImage" name="StudentImage" accept="image/*" style="display: none;" />
                        <button type="button" class="upload-btn" id="uploadBtn">Upload Photo</button>
                    </div>

                    <div class="form-group">
                        <label for="grade" class="form-label">Grade</label>
                        @* <select class="form-control" id="grade" name="Grade" required>
                            <option value="" disabled>Select Grade</option>
                            <option value="Grade 1" @(Model.Grade == "Grade 1" ? "selected" : "")>Grade 1</option>
                            <option value="Grade 2" @(Model.Grade == "Grade 2" ? "selected" : "")>Grade 2</option>
                            <option value="Grade 3" @(Model.Grade == "Grade 3" ? "selected" : "")>Grade 3</option>
                            <option value="Grade 4" @(Model.Grade == "Grade 4" ? "selected" : "")>Grade 4</option>
                            <option value="Grade 5" @(Model.Grade == "Grade 5" ? "selected" : "")>Grade 5</option>
                            <option value="Grade 6" @(Model.Grade == "Grade 6" ? "selected" : "")>Grade 6</option>
                        </select> *@
                        <input type="text" class="form-control" id="Grade" name="Grade" value="@Model.Grade" required />
                    </div>

                    <div class="form-group">
                        <label for="dob" class="form-label">Date of Birth</label>
                        <input type="date" class="form-control" id="dob" name="DateOfBirth" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")" required />
                    </div>

                    <div class="form-group">
                        <label class="form-label">Gender</label>
                        <div class="gender-options">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="Gender" id="male" value="Male" @(Model.Gender == "Male" ? "checked" : "") required />
                                <label class="form-check-label" for="male">Male</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="Gender" id="female" value="Female" @(Model.Gender == "Female" ? "checked" : "") required />
                                <label class="form-check-label" for="female">Female</label>
                            </div>
                        </div>
                    </div>

                   @*  <div class="form-group">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="Password" required />
                    </div>
 *@
                    
                </div>
            </div>

            <div class="action-buttons">
                <button type="submit" class="btn-save">Save Changes</button>
                <a asp-action="Index" class="btn-cancel">Cancel</a>
            </div>
        </form>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(document).ready(function() {
            // Handle upload button click
            $('#uploadBtn').click(function() {
                $('#studentImage').click();
            });

            // Preview selected image
            $('#studentImage').change(function() {
                if (this.files && this.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function(e) {
                        $('#photoPreview').attr('src', e.target.result);
                        $('#defaultIcon').hide();
                        $('#photoPreview').show();
                    }
                    reader.readAsDataURL(this.files[0]);
                }
            });
        });
    </script>
</body>
</html>