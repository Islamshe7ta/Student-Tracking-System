@model  StudentDTO

<form method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <!-- Full Name -->
    <div class="mb-3">
        <label for="studentName" class="form-label">Full Name</label>
        <input type="text" class="form-control" id="studentName" name="FullName" value="@Model.FullName" required />
    </div>

    <!-- Email Address -->
    <div class="mb-3">
        <label for="email" class="form-label">Email Address</label>
        <input type="email" class="form-control" id="email" name="EmailAddress" value="@Model.EmailAddress" required />
    </div>
    <div class="mb-3">
        <label for="Address" class="form-label"> Address</label>
        <input type="Address" class="form-control" id="Address" name="Address" value="@Model.Address" required />
    </div>

    <!-- Phone Number -->
    <div class="mb-3">
        <label for="phone" class="form-label">Phone Number</label>
        <input type="tel" class="form-control" id="phone" name="PhoneNo" value="@Model.PhoneNo" required />
    </div>

    <!-- Date of Birth -->
    <div class="mb-3">
        <label for="dob" class="form-label">Date of Birth</label>
        <input type="date" class="form-control" id="dob" name="DateOfBirth" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")" required />
    </div>

    <!-- Grade -->
    <div class="mb-3">
        <label for="grade" class="form-label">Grade</label>
        <input type="text" class="form-control" id="grade" name="Grade" value="@Model.Grade" required />
    </div>

    <!-- Gender -->
    <div class="mb-3">
        <label class="form-label">Gender</label>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="Gender" id="male" value="Male" @(Model.Gender == "Male" ? "checked" : "") required />
            <label class="form-check-label" for="male">Male</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="Gender" id="female" value="Female" @(Model.Gender == "Female" ? "checked" : "") required />
            <label class="form-check-label" for="female">Female</label>
        </div>
    </div>

    <!-- Password -->
    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" name="Password" required />
    </div>

    <!-- Student Image Upload -->
    <div class="mb-3">
        <label for="studentImage" class="form-label">Student Image</label>
        <input type="file" class="form-control" id="studentImage" name="StudentImage" accept="image/*" />
    </div>

    <hr />

    <!-- Parent Information -->
    <h5>Parent Information</h5>

    <!-- Parent Name -->
    <div class="mb-3">
        <label for="parentName" class="form-label">Parent Name</label>
        <input type="text" class="form-control" id="parentName" name="ParentName" value="@Model.ParentName" required />
    </div>

    <!-- Parent Email -->
    <div class="mb-3">
        <label for="parentEmail" class="form-label">Parent Email</label>
        <input type="email" class="form-control" id="parentEmail" name="ParentEmail" value="@Model.ParentEmail" required />
    </div>

    <!-- Parent Phone -->
    <div class="mb-3">
        <label for="parentPhone" class="form-label">Parent Phone</label>
        <input type="tel" class="form-control" id="parentPhone" name="ParentPhone" value="@Model.ParentPhone" required />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
