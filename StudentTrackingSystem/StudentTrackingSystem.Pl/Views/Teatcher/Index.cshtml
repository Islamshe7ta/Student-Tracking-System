@model IEnumerable<StudentTrackingSystem.DAL.Models.Teatcher>

@{
    // ViewData["Title"] = "Teachers List";
    Layout = "_Layout"; // تأكد من أن اسم Layout صحيح
}

<h2>@ViewData["Title"]</h2>
<h2 class="text-center">All Teachers </h2>

@* <p class="d-grid gap-2 d-md-flex justify-content-md-end"> *@
@*     <a class="btn btn-primary" asp-action="Create"> Add New Teacher +</a> *@
@* </p> *@

<div class="d-flex align-items-center mt-5">
    <div class="col-10" style="margin-right: 10px;">
		<input type="text" class="form-control" id="searchInput" placeholder="Search by name" />
    </div>
    <div class="col-2">
        <a asp-action="Create" class="btn btn-primary btn-md ">Add New Teacher</a>
    </div>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Gender</th>
            <th>Date of Birth</th>
            <th>Subject</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                
                <td>@teacher.FullName</td>
                <td>@teacher.Email</td>
                <td>@teacher.PhoneNumber</td>
                <td>@teacher.Gender</td>
                <td>@teacher.DateOfBirth.ToShortDateString()</td>
                <td>
                    @if (!string.IsNullOrEmpty(teacher.ImagePath))
                    {
                        <img src="@teacher.ImagePath" width="60" height="60" style="object-fit:cover;" />
                    }
                </td>
              
                <td>
                    <a class="btn btn-outline-info btn-sm" asp-action="Details" asp-route-id="@teacher.Id">Details</a>
                    <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@teacher.Id">Edit</a>
                    <button class="btn btn-outline-danger btn-sm" onclick="confirmDelete(@teacher.Id)">Delete</button>
                </td>

              
            </tr>
        }
    </tbody>
</table>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <form id="deleteForm" asp-action="Delete" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this teacher?
                </div>
                <div class="modal-footer">
                    <input type="hidden" id="teacherIdInput" name="id" />
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(id) {
            document.getElementById("teacherIdInput").value = id;
            var deleteModal = new bootstrap.Modal(document.getElementById("deleteModal"));
            deleteModal.show();
        }
            document.getElementById("searchInput").addEventListener("input", function () {
            var searchQuery = this.value.toLowerCase();  // تحويل النص المدخل إلى حروف صغيرة
            var rows = document.querySelectorAll("table tbody tr");  // اختيار كل صفوف الجدول

            rows.forEach(function(row) {
                var fullNameCell = row.cells[1];  // عمود الاسم الكامل (Full Name)
                var fullName = fullNameCell.textContent.toLowerCase();  // تحويل الاسم إلى حروف صغيرة

                // إذا كانت قيمة النص المدخل تطابق جزء من الاسم الكامل
                if (fullName.includes(searchQuery)) {
                    row.style.display = "";  // عرض الصف
                } else {
                    row.style.display = "none";  // إخفاء الصف
                }
            });
        });
    </script>
}

