@model IEnumerable<StudentTrackingSystem.DAL.Models.Teatcher>

@{
    ViewData["Title"] = "Teacher List";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Student Tracking System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/custom_styles.css" /> 
    <link rel="stylesheet" href="~/css/ShowStudents.css" /> <!-- Specific styles for this page -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

</head>
<body>
    <div class="container mt-4" style="width:94%">
        <h1 class="page-title">All Teachers</h1>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="row mb-3 align-items-center">
            <div class="col-md-auto">
                <label for="subjectFilter" class="form-label me-2">Filter by Subject:</label>
                <select id="subjectFilter" class="form-select d-inline-block" style="width: auto;">
                    <option value="all" selected>All Subjects</option>
                    @if (ViewBag.Subjects != null)
                    {
                        foreach (var subject in (IEnumerable<SelectListItem>)ViewBag.Subjects)
                        {
                            <option value="@subject.Text">@subject.Text</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-auto mt-2 mt-md-0">
                 <input type="text" id="nameSearchInput" class="form-control d-inline-block" style="width: auto;" placeholder="Search by Name...">
            </div>
            <div class="col-md text-md-end mt-2 mt-md-0">
                <a href="@Url.Action("Create", "Teatcher")" class="btn btn-primary">
                    <i class="fas fa-user-plus"></i> Add New Teacher
                </a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>Photo</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Subject</th>
                        <th>Phone</th>
                        <th>Status</th> <!-- Placeholder for visual parity -->
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var teacher in Model)
                        {
                            <tr>
                                <td data-label="Photo">
                                    @if (!string.IsNullOrEmpty(teacher.ImagePath))
                                    {
                                        <img src="@teacher.ImagePath" alt="@teacher.FullName" class="teacher-img-sm" style="width: 60px; height: 60px; object-fit: cover; border-radius: 50%;">
                                    }
                                    else
                                    {
                                        <img src="~/images/default-teacher.png" alt="Default Photo" class="teacher-img-sm" style="width: 60px; height: 60px; object-fit: cover; border-radius: 50%;">
                                    }
                                </td>
                                <td data-label="Name">@teacher.FullName</td>
                                <td data-label="Email">@teacher.Email</td>
                                <td data-label="Subject">@(teacher.Subject?.Name ?? "N/A")</td>
                                <td data-label="Phone">@teacher.PhoneNumber</td>
                                <td data-label="Status"><span class="status-badge status-active">Active</span></td> <!-- Example Status -->
                                <td data-label="Actions" class="action-buttons-group">
                                    <a href="@Url.Action("Details", "Teatcher", new { id = teacher.Id })" class="btn btn-info btn-sm" title="Details">
                                        <i class="bi bi-eye-fill"></i> Details
                                    </a>
                                    <a href="@Url.Action("Edit", "Teatcher", new { id = teacher.Id })" class="btn btn-warning btn-sm" title="Edit">
                                        <i class="bi bi-pencil-fill"></i> Edit
                                    </a>
                                    <a href="@Url.Action("Delete", "Teatcher", new { id = teacher.Id })" class="btn btn-danger btn-sm" title="Delete">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center">No teachers found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function(){
            function applyFilters() {
                var subjectValue = $("#subjectFilter").val().toLowerCase();
                var nameValue = $("#nameSearchInput").val().toLowerCase();

                $("table tbody tr").hide().filter(function() {
                    var row = $(this);
                    var subjectMatch = true;
                    var nameMatch = true;

                    if (subjectValue !== "all") {
                        subjectMatch = row.find("td[data-label=\'Subject\']").text().toLowerCase().indexOf(subjectValue) > -1;
                    }
                    if (nameValue !== "") {
                        nameMatch = row.find("td[data-label=\'Name\']").text().toLowerCase().indexOf(nameValue) > -1;
                    }
                    return subjectMatch && nameMatch;
                }).show();
            }

            $("#subjectFilter").on("change", applyFilters);
            $("#nameSearchInput").on("keyup", applyFilters);
        });
    </script>
</body>
</html>

