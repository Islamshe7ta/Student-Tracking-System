@model IEnumerable<StudentTrackingSystem.DAL.Models.Teatcher>

@{
    ViewData["Title"] = "Teacher List";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Student Tracking System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/auth-styles.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Nunito', sans-serif;
            background: #f8f9fa;
            min-height: 100vh;
            position: relative;
            margin: 0;
        }

        .main-container {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(10px);
            padding: 2.5rem;
            margin: 2rem auto;
            width: 95%;
            max-width: 1200px;
            position: relative;
            z-index: 1;
        }

        .page-header {
            text-align: center;
            margin-bottom: 3rem;
            color: #2c3e50;
        }

        .page-header h1 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .table {
            background: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        }

        .table thead th {
            background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
            color: white;
            border: none;
            padding: 1rem;
            font-weight: 600;
        }

        .table tbody td {
            padding: 1rem;
            vertical-align: middle;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        }

        .table tbody tr:last-child td {
            border-bottom: none;
        }

        .btn {
            padding: 8px 16px;
            border-radius: 50px;
            font-weight: 600;
            transition: all 0.3s ease;
            margin: 0 4px;
            position: relative;
            overflow: hidden;
        }

        .btn i {
            margin-right: 6px;
            transition: transform 0.3s ease;
        }

        .btn:hover i {
            transform: translateX(3px);
        }

        .btn-info {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            border: none;
            color: white;
        }

        .btn-info:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(79, 172, 254, 0.3);
            color: white;
        }

        .btn-warning {
            background: linear-gradient(135deg, #ffd93d 0%, #ff9f43 100%);
            border: none;
            color: white;
        }

        .btn-warning:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(255, 217, 61, 0.3);
            color: white;
        }

        .btn-danger {
            background: linear-gradient(135deg, #ff6b6b 0%, #ff0000 100%);
            border: none;
        }

        .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(255, 107, 107, 0.3);
        }

        .btn-primary {
            background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
            border: none;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(78, 115, 223, 0.3);
        }

        .back-button {
            position: absolute;
            top: 20px;
            left: 20px;
            padding: 12px 24px;
            background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
            color: white;
            border-radius: 50px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        .back-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
            color: white;
        }

        .back-button i {
            margin-right: 8px;
            transition: transform 0.3s ease;
        }

        .back-button:hover i {
            transform: translateX(-4px);
        }

        .form-select {
            border-radius: 10px;
            padding: 0.5rem 1rem;
            border: 2px solid #e9ecef;
            transition: all 0.3s ease;
        }

        .form-select:focus {
            border-color: #4e73df;
            box-shadow: 0 0 0 0.2rem rgba(78, 115, 223, 0.25);
        }

        .alert {
            border-radius: 15px;
            border: none;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        }

        .alert-success {
            background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
            color: white;
        }

        .filters-row {
            background: white;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        }

        .input-group-text {
            background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
            color: white;
            border: none;
        }

        .form-control {
            border-radius: 10px;
            padding: 0.5rem 1rem;
            border: 2px solid #e9ecef;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: #4e73df;
            box-shadow: 0 0 0 0.2rem rgba(78, 115, 223, 0.25);
        }

        .teacher-img-sm {
            width: 45px;
            height: 45px;
            object-fit: cover;
            border-radius: 50%;
            border: 2px solid #4e73df;
        }

        .status-badge {
            padding: 0.5em 1em;
            border-radius: 2rem;
            font-size: 0.75rem;
            font-weight: 600;
            background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
            color: white;
        }
    </style>
</head>
<body>
    <!-- Floating Particles Background -->
    <div class="particles" id="particles-js"></div>

    <div class="main-container">
        <a href="javascript:history.back()" class="back-button">
            <i class="fas fa-arrow-left"></i> Back
        </a>

        <div class="page-header">
            <h1>Teachers List</h1>
            <p class="text-muted">Manage all teachers</p>
        </div>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="row filters-row align-items-center">
            <div class="col-md-4">
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-filter"></i></span>
                    <select id="subjectFilter" class="form-select">
                        <option value="all" selected>All Subjects</option>
                        @if (ViewBag.Subjects != null)
                        {
                            foreach (var subject in (IEnumerable<SelectListItem>)ViewBag.Subjects)
                            {
                                <option value="@subject.Text">@subject.Text</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="col-md-4">
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-search"></i></span>
                    <input type="text" id="nameSearchInput" class="form-control" placeholder="Search by name...">
                </div>
            </div>
            <div class="col-md-4 text-end">
                <a href="@Url.Action("Create", "Teatcher")" class="btn btn-primary">
                    <i class="fas fa-user-plus me-2"></i>Add New Teacher
                </a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Photo</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Subject</th>
                        <th>Phone</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var teacher in Model)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(teacher.ImagePath))
                                    {
                                        <img src="@teacher.ImagePath" alt="@teacher.FullName" class="teacher-img-sm">
                                    }
                                    else
                                    {
                                        <img src="~/images/default-teacher.png" alt="Default Photo" class="teacher-img-sm">
                                    }
                                </td>
                                <td>@teacher.FullName</td>
                                <td>@teacher.Email</td>
                                <td>@(teacher.Subject?.Name ?? "N/A")</td>
                                <td>@teacher.PhoneNumber</td>
                                <td><span class="status-badge status-active">Active</span></td>
                                <td class="action-buttons-group">
                                    <a href="@Url.Action("Details", "Teatcher", new { id = teacher.Id })" class="btn btn-info">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="@Url.Action("Edit", "Teatcher", new { id = teacher.Id })" class="btn btn-warning">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", "Teatcher", new { id = teacher.Id })" class="btn btn-danger">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center">No teachers found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script src="~/js/auth-scripts.js"></script>

    <script>
        $(document).ready(function(){
            function applyFilters() {
                var subjectValue = $("#subjectFilter").val().toLowerCase();
                var nameValue = $("#nameSearchInput").val().toLowerCase();

                $("tbody tr").each(function() {
                    var row = $(this);
                    var subject = row.find("td:eq(3)").text().toLowerCase();
                    var name = row.find("td:eq(1)").text().toLowerCase();

                    var showRow = (subjectValue === "all" || subject.includes(subjectValue)) &&
                                (name.includes(nameValue));

                    row.toggle(showRow);
                });
            }

            $("#subjectFilter, #nameSearchInput").on("change keyup", applyFilters);
        });
    </script>
</body>
</html>

