@model StudentTrackingSystem.DAL.Models.Teatcher

@{
    ViewData["Title"] = "Teacher Details";
}

<h2>Teacher Details</h2>

<div>
    <p><strong>Name:</strong> @Model.FullName</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Phone:</strong> @Model.PhoneNumber</p>
    <p><strong>Gender:</strong> @Model.Gender</p>
    <p><strong>Subject:</strong> @Model.subjects?.Name</p>
    <p><strong>Date of Birth:</strong> @Model.DateOfBirth.ToShortDateString()</p>
</div>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
