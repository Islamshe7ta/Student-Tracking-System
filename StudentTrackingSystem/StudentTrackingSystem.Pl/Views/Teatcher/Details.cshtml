@model StudentTrackingSystem.DAL.Models.Teatcher // Or TeatcherDTO if that's the standard for this view

@{
    ViewData["Title"] = "Teacher Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Student Tracking System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/custom_styles.css" /> <!-- Global custom styles -->
    <link rel="stylesheet" href="~/css/ShowStudents.css" /> <!-- Specific styles for Details Teacher page -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <style>
        .teacher-details-card .card-header {
            background-color: var(--primary-color) !important;
        }
    </style>
</head>

<body>
    <div class="container mt-4">
        <h1 class="page-title">Teacher Details</h1>

        <div class="card shadow-sm teacher-details-card">
            <div class="card-header bg-primary text-white"> <!-- Adapted from student view, consider a teacher-specific color if needed -->
                <h4 class="mb-0">Information for: @Model.FullName</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 text-center mb-3 mb-md-0">
                        @if (!string.IsNullOrEmpty(Model.ImagePath))
                        {
                            <img src="@Model.ImagePath" alt="@Model.FullName" class="img-fluid rounded-circle teacher-detail-img-large">
                        }
                        else
                        {
                            <img src="~/images/default-teacher.png" alt="Default Photo" class="img-fluid rounded-circle teacher-detail-img-large">
                        }
                    </div>
                    <div class="col-md-8">
                        <dl class="row">
                            <dt class="col-sm-4 detail-label">Full Name:</dt>
                            <dd class="col-sm-8">@Model.FullName</dd>

                            <dt class="col-sm-4 detail-label">Email Address:</dt>
                            <dd class="col-sm-8">@Model.Email</dd>

                            <dt class="col-sm-4 detail-label">Phone Number:</dt>
                            <dd class="col-sm-8">@Model.PhoneNumber</dd>

                            <dt class="col-sm-4 detail-label">Subject:</dt>
                            <dd class="col-sm-8">@(Model.Subject?.Name ?? "N/A")</dd> <!-- Assuming Subject is a navigation property -->

                            <dt class="col-sm-4 detail-label">Date of Birth:</dt>
                            <dd class="col-sm-8">@Model.DateOfBirth.ToString("dd MMMM yyyy")</dd>

                            <dt class="col-sm-4 detail-label">Gender:</dt>
                            <dd class="col-sm-8">@Model.Gender</dd>
                            
                         </dl>
                    </div>
                </div>
            </div>
            <div class="card-footer text-center action-buttons-group">
                <a asp-action="Edit" asp-controller="Teatcher" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                    <i class="fas fa-edit"></i> Edit Teacher
                </a>
                <a asp-action="Delete" asp-controller="Teacher" asp-route-id="@Model.Id" class="btn btn-danger me-2">
                    <i class="fas fa-trash-alt"></i> Delete Teacher
                </a>
                <a asp-action="Index" asp-controller="Teatcher" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

<style>
    /* Styles adapted from student Details.cshtml, consider moving to DetailsTeacher.css */
    .teacher-details-card .card-header {
        /* background-color: var(--teacher-primary-color); /* Define a primary color for teacher if different */
        /* For now, using a generic blue, assuming custom_styles.css might define var(--primary-color) */
        background-color: #007bff; 
    }
    .teacher-detail-img-large {
        width: 180px;
        height: 180px;
        object-fit: cover;
        border: 4px solid #add8e6; /* Light blue border, adapt as needed */
    }
    .detail-label {
        font-weight: 600;
        /* color: var(--teacher-primary-color-dark); /* Define if needed */
    }
    dl.row dd {
        margin-bottom: .5rem;
    }
</style>

