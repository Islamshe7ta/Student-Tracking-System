@model StudentTrackingSystem.DAL.Models.Teatcher // Or TeatcherDTO if that's the standard for this view

@{
    ViewData["Title"] = "Delete Teacher Confirmation";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Student Tracking System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/custom_styles.css" /> <!-- Global custom styles -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

</head>
<body>
    <div class="container mt-5">
        <div class="card shadow-sm text-center" style="max-width: 600px; margin: auto;">
            <div class="card-body p-5">
                <i class="fas fa-check-circle fa-5x text-success mb-4"></i>
                <h1 class="page-title text-success">Teacher Deleted Successfully</h1>
                
                @if (Model != null)
                {
                    <p class="lead mt-3">The teacher, <strong>@Model.FullName</strong> (Subject: @(Model.Subject?.Name ?? "N/A")), has been successfully removed from the system.</p>
                    <hr class="my-4">
                    <dl class="row text-start">
                        <dt class="col-sm-5">Full Name:</dt>
                        <dd class="col-sm-7">@Model.FullName</dd>

                        <dt class="col-sm-5">Email Address:</dt>
                        <dd class="col-sm-7">@Model.Email</dd>

                        <dt class="col-sm-5">Subject:</dt>
                        <dd class="col-sm-7">@(Model.Subject?.Name ?? "N/A")</dd>
                    </dl>
                }
                else
                {
                     <p class="lead mt-3">The teacher record has been successfully removed from the system.</p>
                }
                
                <div class="mt-4">
                    <a asp-action="Index" asp-controller="Teacher" class="btn btn-primary btn-lg">
                        <i class="fas fa-arrow-left"></i> Back to Teacher List
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

