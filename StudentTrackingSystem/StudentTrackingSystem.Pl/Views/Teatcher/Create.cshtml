@using StudentTrackingSystem.PL.DTOs // Assuming TeatcherDTO is in this namespace
@model TeatcherDTO // Or the correct DTO for Teacher, e.g., StudentTrackingSystem.DAL.Models.Teatcher if DTO is not used for POST

@{
    ViewData["Title"] = "Add New Teacher";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Student Tracking System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/custom_styles.css" /> <!-- Ensure this path is correct for teacher's CSS -->
    @* <link rel="stylesheet" href="~/css/CreateStudent.css" /> <!-- Specific styles for Create Teacher page --> *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
</head>
<body>
    <div class="container mt-4">
        <h1 class="page-title">Add New Teacher</h1>

        <form asp-action="Create" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()

            <div class="form-container card shadow-sm p-4">
                <div class="row g-4">
                    <!-- Left Column - Teacher Information -->
                    <div class="col-md-6 form-section">
                        <h2 class="form-section-title">Teacher Information</h2>

                        <div class="form-group mb-3">
                            <label asp-for="FullName" class="form-label">Full Name</label>
                            <input asp-for="FullName" class="form-control" required />
                            <div class="invalid-feedback">Please enter the teacher's full name.</div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label">Email Address</label>
                            <input asp-for="Email" type="email" class="form-control" required />
                            <div class="invalid-feedback">Please enter a valid email address.</div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                            <input asp-for="PhoneNumber" type="tel" class="form-control" required />
                            <div class="invalid-feedback">Please enter a phone number.</div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="SubjectId" class="form-label">Subject</label>
                            <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.Subjects" required>
                                <option value="">Select Subject</option>
                            </select>
                            <div class="invalid-feedback">Please select a subject.</div>
                        </div>
                   </div>

                    <!-- Right Column - Additional Information -->
                    <div class="col-md-6 form-section">
                        <h2 class="form-section-title">Additional Information</h2>
                        <!-- Teacher Photo -->
                        <div class="teacher-photo text-center mb-3">
                            <div class="photo-container mb-2">
                                <img id="photoPreview" src="~/images/profile-picture.png" alt="Teacher Photo Preview" class="img-fluid rounded-circle" style="width: 150px; height: 150px; object-fit: cover;">
                            </div>
                            <input asp-for="TeacherImage" type="file" id="teacherImageFile" name="TeacherImage" accept="image/*" class="form-control d-none" />
                            <button type="button" class="btn btn-secondary btn-sm" id="uploadBtn"><i class="fas fa-upload"></i> Upload Photo</button>
                            <span asp-validation-for="TeacherImage" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="DateOfBirth" class="form-label">Date of Birth</label>
                            <input asp-for="DateOfBirth" type="date" class="form-control" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")"/>
                            <div class="invalid-feedback">Please enter the date of birth.</div>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Gender</label>
                            <div class="gender-options">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="Gender" id="male" value="Male" required />
                                    <label class="form-check-label" for="male">Male</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="Gender" id="female" value="Female" required />
                                    <label class="form-check-label" for="female">Female</label>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="action-buttons mt-4 text-center">
                <button type="submit" class="btn btn-primary btn-lg me-2"><i class="fas fa-save"></i> Create Teacher</button>
                <a asp-action="Index" asp-controller="Teatcher" class="btn btn-secondary btn-lg"><i class="fas fa-times-circle"></i> Cancel</a>
            </div>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Bootstrap form validation
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                var forms = document.getElementsByClassName('needs-validation');
                Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();

        // Image preview script
        $(document).ready(function() {
            $('#uploadBtn').click(function() {
                $('#teacherImageFile').click(); // Changed from studentImage to teacherImageFile
            });

            $('#teacherImageFile').change(function() {
                if (this.files && this.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function(e) {
                        $('#photoPreview').attr('src', e.target.result);
                    }
                    reader.readAsDataURL(this.files[0]);
                }
            });
        });
    </script>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>

