@model StudentTrackingSystem.PL.DTOs.TeatcherDTO

@{
    ViewData["Title"] = "Delete Teacher";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Student Tracking System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/custom_styles.css" /> <!-- Global custom styles -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <style>
        /* Styles adapted from student's Delete.cshtml, consider moving to DeleteTeacher.css */
        .teacher-detail-img-large-delete {
            width: 150px;
            height: 150px;
            object-fit: cover;
            border: 3px solid var(--danger-color-light); /* Ensure --danger-color-light is defined in custom_styles.css */
        }

        .detail-label {
            font-weight: 600;
        }

        dl.row dd {
            margin-bottom: .5rem;
        }

        .teacher-delete-card .card-header {
            /* background-color: var(--danger-color); /* Ensure --danger-color is defined */
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h1 class="page-title text-danger">Delete Teacher Confirmation</h1>

        <div class="alert alert-danger mt-3" role="alert">
            <h4 class="alert-heading"><i class="fas fa-exclamation-triangle"></i> Are you sure?</h4>
            <p>You are about to permanently delete the teacher listed below. This action cannot be undone.</p>
        </div>

        <div class="card shadow-sm teacher-delete-card mt-4">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">Teacher to be Deleted: @Model.FullName</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 text-center mb-3 mb-md-0">
                        @if (!string.IsNullOrEmpty(Model.ImagePath))
                        {
                            <img src="@Model.ImagePath" alt="@Model.FullName" class="img-fluid rounded-circle teacher-detail-img-large-delete">
                        }
                        else
                        {
                            <img src="~/images/default-teacher.png" alt="Default Photo" class="img-fluid rounded-circle teacher-detail-img-large-delete">
                        }
                    </div>
                    <div class="col-md-9">
                        <dl class="row">
                            <dt class="col-sm-4 detail-label">Full Name:</dt>
                            <dd class="col-sm-8">@Model.FullName</dd>

                            <dt class="col-sm-4 detail-label">Email Address:</dt>
                            <dd class="col-sm-8">@Model.Email</dd>

                            <dt class="col-sm-4 detail-label">Subject:</dt>
                            <dd class="col-sm-8">@ViewBag.SubjectName ?? "N/A"</dd>

                            <dt class="col-sm-4 detail-label">Phone Number:</dt>
                            <dd class="col-sm-8">@Model.PhoneNumber</dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="card-footer text-center action-buttons-group">
                <form asp-action="Delete" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger btn-lg me-2">
                        <i class="fas fa-trash-alt"></i> Confirm Delete
                    </button>
                </form>
                <a asp-action="Index" asp-controller="Teatcher" class="btn btn-secondary btn-lg">
                    <i class="fas fa-times-circle"></i> Cancel
                </a>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

