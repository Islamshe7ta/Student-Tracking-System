@using StudentTrackingSystem.DAL.Data.Models
@model Assignment
@{
    ViewData["Title"] = "Assignments";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <!-- Admin Section -->
            <div class="card border-0 shadow-lg mb-5">
                <div class="card-header bg-primary-gradient text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="h5 mb-0 fw-semibold">
                            <i class="fas fa-cogs me-2"></i>Admin Controls
                        </h3>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="row g-4">
                        <!-- View Card -->
                        <div class="col-md-4">
                            <div class="card h-100 border-0 shadow-sm hover-effect">
                                <div class="card-body text-center p-4">
                                    <div class="icon-lg bg-primary bg-opacity-10 text-primary rounded-circle mb-3 mx-auto">
                                        <i class="fas fa-eye fa-fw"></i>
                                    </div>
                                    <h4 class="h6 fw-semibold mb-2">View All Assignments</h4>
                                    <p class="text-muted small mb-3">Access all assignments across all classes</p>
                                    <a asp-action="TeacherAssignments" class="btn btn-sm btn-primary rounded-pill px-3">
                                        <i class="fas fa-arrow-right me-1"></i> Access
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Create Card -->
                        <div class="col-md-4">
                            <div class="card h-100 border-0 shadow-sm hover-effect">
                                <div class="card-body text-center p-4">
                                    <div class="icon-lg bg-success bg-opacity-10 text-success rounded-circle mb-3 mx-auto">
                                        <i class="fas fa-plus fa-fw"></i>
                                    </div>
                                    <h4 class="h6 fw-semibold mb-2">Create Assignments</h4>
                                    <p class="text-muted small mb-3">Create new assignments for any class</p>
                                    <a asp-action="Create" class="btn btn-sm btn-success rounded-pill px-3">
                                        <i class="fas fa-plus me-1"></i> Create
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Manage Card -->
                        <div class="col-md-4">
                            <div class="card h-100 border-0 shadow-sm hover-effect">
                                <div class="card-body text-center p-4">
                                    <div class="icon-lg bg-info bg-opacity-10 text-info rounded-circle mb-3 mx-auto">
                                        <i class="fas fa-list-check fa-fw"></i>
                                    </div>
                                    <h4 class="h6 fw-semibold mb-2">Manage Submissions</h4>
                                    <p class="text-muted small mb-3">Review and grade all submissions</p>
                                    <a asp-action="Submissions" class="btn btn-sm btn-info rounded-pill px-3">
                                        <i class="fas fa-tasks me-1"></i> Manage
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
            border-top: 3px solid var(--bs-primary);
        }

    .btn {
        padding: 12px 20px;
        font-weight: 500;
    }

    .card-header {
        border-bottom: none;
    }
</style>

