@model IEnumerable<StudentTrackingSystem.DAL.Data.Models.StudentAssignment>

@{
    ViewData["Title"] = "Assignment Submissions";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Submissions for: @Model.FirstOrDefault()?.Assignment.Title</h2>
        <a asp-action="TeacherAssignments" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Assignments
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No submissions received yet.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Student Name</th>
                        <th>Submission Date</th>
                        <th>File</th>
                        <th>Status</th>
                        <th>Marks</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var submission in Model)
                    {
                        <tr>
                            <td>@submission.Student.UserName</td>
                            <td>
                                @if (submission.SubmissionDate.HasValue)
                                {
                                    @submission.SubmissionDate.Value.ToString("MMM dd, yyyy HH:mm")
                                    if (submission.SubmissionDate > submission.Assignment.DueDate)
                                    {
                                        <span class="badge bg-danger ms-2">Late</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">Not submitted</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(submission.SubmittedFileUrl))
                                {
                                    <a href="~/submissions/@submission.SubmittedFileUrl" target="_blank" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-download"></i> Download
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">No file</span>
                                }
                            </td>
                            <td>
                                @if (submission.IsSubmitted)
                                {
                                    if (submission.IsGraded)
                                    {
                                        <span class="badge bg-success">Graded</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Pending Grade</span>
                                    }
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Not Submitted</span>
                                }
                            </td>
                            <td>
                                @if (submission.IsGraded)
                                {
                                    <span>@submission.ObtainedMarks / @submission.Assignment.TotalMarks</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (submission.IsSubmitted && !submission.IsGraded)
                                {
                                    <form asp-action="Grade" method="post" class="d-flex gap-2">
                                        <input type="hidden" name="StudentAssignmentId" value="@submission.Id" />
                                        <input type="number" name="ObtainedMarks" class="form-control form-control-sm" 
                                               style="width: 80px" required min="0" max="@submission.Assignment.TotalMarks" />
                                        <button type="submit" class="btn btn-sm btn-success">
                                            <i class="fas fa-check"></i> Grade
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div> 