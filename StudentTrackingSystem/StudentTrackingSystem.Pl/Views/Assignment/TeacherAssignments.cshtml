@model IEnumerable<StudentTrackingSystem.Pl.DTOs.AssignmentDetailsDTO>

@{
    ViewData["Title"] = "My Assignments";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>My Assignments</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create New Assignment
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            You haven't created any assignments yet.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">@item.Title</h5>
                            <span class="badge bg-primary">@item.Subject</span>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <strong>Grade:</strong> @item.Grade
                            </div>
                            <div class="mb-3">
                                <strong>Description:</strong>
                                <p class="mb-2">@item.Description</p>
                            </div>
                            <div class="mb-3">
                                <strong>Due Date:</strong> @item.DueDate.ToString("MMM dd, yyyy HH:mm")
                            </div>
                            <div class="mb-3">
                                <strong>Total Marks:</strong> @item.TotalMarks
                            </div>
                            @if (!string.IsNullOrEmpty(item.FileUrl))
                            {
                                <div class="mb-3">
                                    <strong>Assignment File:</strong>
                                    <a href="~/assignments/@item.FileUrl" target="_blank" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-download"></i> Download
                                    </a>
                                </div>
                            }
                        </div>
                        <div class="card-footer">
                            <a asp-action="Submissions" asp-route-id="@item.Id" class="btn btn-info">
                                <i class="fas fa-list"></i> View Submissions
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div> 