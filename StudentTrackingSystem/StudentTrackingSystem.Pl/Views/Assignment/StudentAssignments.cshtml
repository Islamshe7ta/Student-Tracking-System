@model IEnumerable<StudentTrackingSystem.Pl.DTOs.AssignmentDetailsDTO>

@{
    ViewData["Title"] = "My Assignments";
}

<div class="container mt-4">
    <h2 class="mb-4">My Assignments</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No assignments available at the moment.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">@item.Title</h5>
                            <span class="badge bg-primary">@item.Subject</span>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <strong>Teacher:</strong> @item.TeacherName
                            </div>
                            <div class="mb-3">
                                <strong>Grade:</strong> @item.Grade
                            </div>
                            <div class="mb-3">
                                <strong>Description:</strong>
                                <p class="mb-2">@item.Description</p>
                            </div>
                            <div class="mb-3">
                                <strong>Due Date:</strong> @item.DueDate.ToString("MMM dd, yyyy HH:mm")
                                @{
                                    var isOverdue = DateTime.Now > item.DueDate;
                                    if (isOverdue)
                                    {
                                        <span class="badge bg-danger ms-2">Overdue</span>
                                    }
                                    else
                                    {
                                        var timeLeft = item.DueDate - DateTime.Now;
                                        <span class="badge bg-info ms-2">
                                            @(timeLeft.Days > 0 ? $"{timeLeft.Days}d " : "")
                                            @(timeLeft.Hours)h left
                                        </span>
                                    }
                                }
                                @if (item.IsGraded)
                                {
                                    <div class="mb-3">
                                        <strong>Grade:</strong>
                                        <span class="@(item.ObtainedMarks >= item.TotalMarks * 0.5 ? "text-success" : "text-danger")">
                                            @item.ObtainedMarks / @item.TotalMarks
                                            (@Math.Round((double)item.ObtainedMarks / item.TotalMarks * 100, 1)%)
                                        </span>
                                    </div>
                                }
                            </div>
                            <div class="mb-3">
                                <strong>Total Marks:</strong> @item.TotalMarks
                            </div>
                            @if (!string.IsNullOrEmpty(item.FileUrl))
                            {
                                <div class="mb-3">
                                    <strong>Assignment File:</strong>
                                    <a href="~/assignments/@item.FileUrl" target="_blank" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-download"></i> Download
                                    </a>
                                </div>
                            }
                        </div>
                        <div class="card-footer">
                            <form asp-action="Submit" method="post" enctype="multipart/form-data">
                                <input type="hidden" name="AssignmentId" value="@item.Id" />
                                <div class="input-group">
                                    <input type="file" name="SubmissionFile" class="form-control" required />
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-upload"></i> Submit
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>