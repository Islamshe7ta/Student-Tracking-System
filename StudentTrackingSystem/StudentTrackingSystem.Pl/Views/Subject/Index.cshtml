@model IEnumerable<StudentTrackingSystem.DAL.Models.Subject>

@{
    ViewData["Title"] = "Subjects List";
}

<h2>Subjects</h2>

<a class="btn btn-success" asp-action="Create">Add New Subject</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>#</th>
            <th>Subject Name</th>
            <th>Actions</th> <!-- عمود الأيقونات -->
        </tr>
    </thead>
    <tbody>
        @foreach (var subject in Model)
        {
            <tr>
                <td>@subject.Id</td>
                <td>@subject.Name</td>
                <td>
                    <!-- Details Icon -->
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@subject.Id">
                        <i class="fas fa-eye">Detalis</i> <!-- أيقونة عرض التفاصيل -->
                    </a>

                    <!-- Edit Icon -->
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@subject.Id">
                        <i class="fas fa-edit"> Update</i> <!-- أيقونة تعديل -->
                    </a>

                    <!-- Delete Icon -->
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@subject.Id">
                        <i class="fas fa-trash-alt">Delete</i> <!-- أيقونة الحذف -->
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
