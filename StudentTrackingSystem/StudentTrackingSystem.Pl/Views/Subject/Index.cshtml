@model IEnumerable<StudentTrackingSystem.DAL.Models.Subject>

@{
    ViewData["Title"] = "Subjects";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudentTrackingSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/custom_styles.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
</head>
<body>
    <div class="container mt-4" style="width:94%">
        <h1 class="page-title">All Subjects</h1>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="row mb-3 align-items-center">
            <div class="col-md-8">
                <label for="gradeFilter" class="form-label me-2">Filter by Grade:</label>
                <select id="gradeFilter" class="form-select d-inline-block" style="width: auto;">
                    <option value="all" selected>All Grades</option>
                    <option value="Grade 1">Grade 1</option>
                    <option value="Grade 2">Grade 2</option>
                    <option value="Grade 3">Grade 3</option>
                    <option value="Grade 4">Grade 4</option>
                    <option value="Grade 5">Grade 5</option>
                    <option value="Grade 6">Grade 6</option>
                    <option value="Grade 7">Grade 7</option>
                    <option value="Grade 8">Grade 8</option>
                    <option value="Grade 9">Grade 9</option>
                    <option value="Grade 10">Grade 10</option>
                    <option value="Grade 11">Grade 11</option>
                    <option value="Grade 12">Grade 12</option>
                </select>
            </div>
            <div class="col-md-4 text-md-end mt-2 mt-md-0">
                <a href="@Url.Action("Create", "Subject")" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add New Subject
                </a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>Name</th>
                        <th>Grade</th>
                        <th>Teachers</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var subject in Model)
                        {
                            <tr>
                                <td data-label="Name">@subject.Name</td>
                                <td data-label="Grade">@subject.Grade?.Name</td>
                                <td data-label="Teachers">
                                    @if (subject.Teatchers != null && subject.Teatchers.Any())
                                    {
                                        <ul class="list-unstyled mb-0">
                                            @foreach (var teacher in subject.Teatchers)
                                            {
                                                <li>@teacher.FullName</li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <span>No teachers assigned</span>
                                    }
                                </td>
                                <td data-label="Actions" class="action-buttons-group">
                                    <a href="@Url.Action("Details", "Subject", new { id = subject.Id })" class="btn btn-info btn-sm" title="Details">
                                        <i class="bi bi-eye-fill"></i> Details
                                    </a>
                                    <a href="@Url.Action("Edit", "Subject", new { id = subject.Id })" class="btn btn-warning btn-sm" title="Edit">
                                        <i class="bi bi-pencil-fill"></i> Edit
                                    </a>
                                    <a href="@Url.Action("Delete", "Subject", new { id = subject.Id })" class="btn btn-danger btn-sm" title="Delete">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center">No subjects found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#gradeFilter").on("change", function() {
                var value = $(this).val().toLowerCase();
                if (value === "all") {
                    $("table tbody tr").show();
                } else {
                    $("table tbody tr").hide();
                    $("table tbody tr").filter(function() {
                        return $(this).find("td[data-label='Grade']").text().toLowerCase().indexOf(value) > -1;
                    }).show();
                }
            });
        });
    </script>
</body>
</html>