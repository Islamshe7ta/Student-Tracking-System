@model StudentTrackingSystem.DAL.Models.Subject

@{
    ViewData["Title"] = "Create Subject";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Student Tracking System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/custom_styles.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
</head>
<body>
    <div class="container mt-4" style="width:94%">
        <h1 class="page-title">Create New Subject</h1>

        <form asp-action="Create" method="post" class="needs-validation subject-form-container card shadow-sm p-4" novalidate>
            @Html.AntiForgeryToken()

            <div class="row g-4">
                <!-- Left Column - Subject Information -->
                <div class="col-md-6 form-section">
                    <h2 class="form-section-title">Subject Information</h2>

                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label">Subject Name</label>
                        <input asp-for="Name" class="form-control" required />
                        <div class="invalid-feedback">Please enter the subject name.</div>
                    </div>
                </div>

                <!-- Right Column - Additional Information -->
                <div class="col-md-6 form-section">
                    <h2 class="form-section-title">Additional Information</h2>

                    <div class="form-group mb-3">
                        <label asp-for="GradeId" class="form-label">Grade</label>
                        <select asp-for="GradeId" class="form-select" asp-items="ViewBag.Grades" required>
                            <option value="">-- Select Grade --</option>
                        </select>
                        <div class="invalid-feedback">Please select a grade.</div>
                    </div>
                </div>
            </div>

            <div class="action-buttons mt-4 text-center">
                <button type="submit" class="btn btn-primary btn-lg me-2"><i class="fas fa-save"></i> Create Subject</button>
                <a asp-action="Index" asp-controller="Subject" class="btn btn-secondary btn-lg"><i class="fas fa-times-circle"></i> Cancel</a>
            </div>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Bootstrap form validation
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                var forms = document.getElementsByClassName('needs-validation');
                Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
</body>
</html>