


@model StudentTrackingSystem.DAL.Models.Subject

@{
    ViewData["Title"] = "Create Subject";
}

<h2>Create New Subject</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="GradeId" class="form-label">Grade</label>
        <select asp-for="GradeId" class="form-select" asp-items="ViewBag.Grades">
            <option value="">-- Select Grade --</option>
        </select>
        <span asp-validation-for="GradeId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
