@model StudentTrackingSystem.DAL.Models.Subject

@{
    ViewData["Title"] = "Delete Confirmation";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Student Tracking System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/custom_styles.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
</head>
<body>
    <div class="container mt-5">
        <div class="card shadow-sm text-center" style="max-width: 600px; margin: auto;">
            <div class="card-body p-5">
                <i class="fas fa-check-circle fa-5x text-success mb-4"></i>
                <h1 class="page-title text-success">Subject Deleted Successfully</h1>

                @if (Model != null)
                {
                    <p class="lead mt-3">The subject, <strong>@Model.Name</strong> (Grade: @Model.Grade?.Name), has been successfully removed from the system.</p>
                    <hr class="my-4">
                    <dl class="row text-start">
                        <dt class="col-sm-5">Subject Name:</dt>
                        <dd class="col-sm-7">@Model.Name</dd>

                        <dt class="col-sm-5">Grade:</dt>
                        <dd class="col-sm-7">@Model.Grade?.Name</dd>
                    </dl>
                }
                else
                {
                    <p class="lead mt-3">The subject record has been successfully removed from the system.</p>
                }

                <div class="mt-4">
                    <a asp-action="Index" asp-controller="Subject" class="btn btn-primary btn-lg">
                        <i class="fas fa-arrow-left me-2"></i> Back to Subject List
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>