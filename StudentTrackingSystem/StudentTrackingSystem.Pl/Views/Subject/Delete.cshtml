@model StudentTrackingSystem.DAL.Models.Subject

@{
    ViewData["Title"] = "Delete Subject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Student Tracking System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/auth-styles.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        .auth-container {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(10px);
            padding: 2.5rem;
            margin: 2rem auto;
            width: 95%;
            max-width: 800px;
        }

        .back-button {
            position: absolute;
            top: 20px;
            left: 20px;
            padding: 12px 24px;
            background: linear-gradient(135deg, #6B73FF 0%, #000DFF 100%);
            color: white;
            border-radius: 50px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        .back-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
            color: white;
        }

        .back-button i {
            margin-right: 8px;
            transition: transform 0.3s ease;
        }

        .back-button:hover i {
            transform: translateX(-4px);
        }

        .auth-header {
            text-align: center;
            margin-bottom: 2.5rem;
            padding-top: 1rem;
        }

        .auth-header h1 {
            color: #dc3545;
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .warning-alert {
            background: rgba(220, 53, 69, 0.1);
            border: none;
            border-radius: 15px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            box-shadow: 0 4px 15px rgba(220, 53, 69, 0.1);
        }

        .warning-alert i {
            color: #dc3545;
            font-size: 1.5rem;
            margin-right: 1rem;
        }

        .info-card {
            background: #f8f9fa;
            border-radius: 15px;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
        }

        .info-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
        }

        .info-label {
            color: #6c757d;
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
        }

        .info-value {
            color: #2c3e50;
            font-size: 1.1rem;
            font-weight: 600;
        }

        .info-icon {
            color: #dc3545;
            margin-right: 0.5rem;
        }

        .action-buttons {
            display: flex;
            gap: 1rem;
            justify-content: center;
            margin-top: 2rem;
        }

        .action-btn {
            padding: 12px 24px;
            border-radius: 50px;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            border: none;
        }

        .delete-btn {
            background: linear-gradient(135deg, #FF6B6B 0%, #FF0000 100%);
            color: white;
        }

        .delete-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(255, 0, 0, 0.2);
            color: white;
        }

        .cancel-btn {
            background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
            color: white;
        }

        .cancel-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(108, 117, 125, 0.2);
            color: white;
        }
    </style>
</head>
<body>
    <!-- Floating Particles Background -->
    <div class="particles" id="particles-js"></div>

    <div class="auth-container">
        <a href="javascript:history.back()" class="back-button">
            <i class="fas fa-arrow-left"></i> Back
        </a>

        <div class="auth-header">
            <h1>DELETE SUBJECT</h1>
            <p class="text-muted">Confirm subject deletion</p>
        </div>

        <div class="warning-alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-exclamation-triangle"></i>
                <div>
                    <h4 class="alert-heading mb-1">Are you sure?</h4>
                    <p class="mb-0">You are about to permanently delete this subject. This action cannot be undone.</p>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <!-- Subject Information -->
            <div class="col-md-6">
                <div class="info-card">
                    <div class="info-label"><i class="fas fa-book info-icon"></i>Subject Name</div>
                    <div class="info-value">@Model.Name</div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="info-card">
                    <div class="info-label"><i class="fas fa-chalkboard-teacher info-icon"></i>Teacher</div>
                    <div class="info-value">@ViewBag.TeacherName</div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="info-card">
                    <div class="info-label"><i class="fas fa-graduation-cap info-icon"></i>Grade</div>
                    <div class="info-value">@Model.Grade</div>
                </div>
            </div>


        </div>

        <div class="action-buttons">
            <form asp-action="Delete" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="action-btn delete-btn">
                    <i class="fas fa-trash-alt"></i> Confirm Delete
                </button>
            </form>
            <a asp-action="Index" asp-controller="Subject" class="action-btn cancel-btn">
                <i class="fas fa-times-circle"></i> Cancel
            </a>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script src="~/js/auth-scripts.js"></script>
</body>
</html>