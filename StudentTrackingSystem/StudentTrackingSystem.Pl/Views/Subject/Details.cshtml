@model StudentTrackingSystem.DAL.Models.Subject

@{
    ViewData["Title"] = "Subject Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Student Tracking System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/auth-styles.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Nunito', sans-serif;
            background: #f8f9fa;
            min-height: 100vh;
            position: relative;
            margin: 0;
        }

        .main-container {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(10px);
            padding: 2.5rem;
            margin: 2rem auto;
            width: 95%;
            max-width: 1200px;
            position: relative;
            z-index: 1;
        }

        .page-header {
            text-align: center;
            margin-bottom: 3rem;
            color: #2c3e50;
        }

        .page-header h1 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .card {
            border: none;
            border-radius: 20px;
            background: white;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .card-header {
            background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
            color: white;
            border: none;
            padding: 1.5rem;
        }

        .card-body {
            padding: 2rem;
        }

        .card-footer {
            background: #f8f9fa;
            border-top: 1px solid rgba(0, 0, 0, 0.1);
            padding: 1.5rem;
        }

        .btn {
            padding: 12px 24px;
            border-radius: 50px;
            font-weight: 600;
            transition: all 0.3s ease;
            margin-bottom: 1rem;
            position: relative;
            overflow: hidden;
        }

        .btn i {
            margin-right: 8px;
            transition: transform 0.3s ease;
        }

        .btn:hover i {
            transform: translateX(3px);
        }

        .btn-warning {
            background: linear-gradient(135deg, #ffd93d 0%, #ff9f43 100%);
            border: none;
            color: white;
        }

        .btn-warning:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(255, 217, 61, 0.3);
            color: white;
        }

        .btn-danger {
            background: linear-gradient(135deg, #ff6b6b 0%, #ff0000 100%);
            border: none;
        }

        .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(255, 107, 107, 0.3);
        }

        .btn-secondary {
            background: #e9ecef;
            border: none;
            color: #2c3e50;
        }

        .btn-secondary:hover {
            background: #dee2e6;
            transform: translateY(-2px);
        }

        .back-button {
            position: absolute;
            top: 20px;
            left: 20px;
            padding: 12px 24px;
            background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
            color: white;
            border-radius: 50px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        .back-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
            color: white;
        }

        .back-button i {
            margin-right: 8px;
            transition: transform 0.3s ease;
        }

        .back-button:hover i {
            transform: translateX(-4px);
        }

        .detail-label {
            font-weight: 600;
            color: #2c3e50;
        }

        .list-unstyled li {
            padding: 8px 0;
            color: #6c757d;
            display: flex;
            align-items: center;
        }

        .list-unstyled li i {
            margin-right: 10px;
            color: #4e73df;
        }
    </style>
</head>
<body>
    <!-- Floating Particles Background -->
    <div class="particles" id="particles-js"></div>

    <div class="main-container">
        <a href="javascript:history.back()" class="back-button">
            <i class="fas fa-arrow-left"></i> Back
        </a>

        <div class="page-header">
            <h1>Subject Details</h1>
            <p class="text-muted">View subject information and related data</p>
        </div>

        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">@Model.Name</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <dl class="row">
                            <dt class="col-sm-3 detail-label">Name:</dt>
                            <dd class="col-sm-9">@Model.Name</dd>

                            <dt class="col-sm-3 detail-label">Grade:</dt>
                            <dd class="col-sm-9">@Model.Grade?.Name</dd>

                            <dt class="col-sm-3 detail-label">Teachers:</dt>
                            <dd class="col-sm-9">
                                @if (Model.Teatchers != null && Model.Teatchers.Any())
                                {
                                    <ul class="list-unstyled">
                                        @foreach (var teacher in Model.Teatchers)
                                        {
                                            <li><i class="fas fa-chalkboard-teacher"></i>@teacher.FullName</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span>No teachers assigned</span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="card-footer text-center">
                <a asp-action="Edit" asp-controller="Subject" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                    <i class="fas fa-edit"></i> Edit Subject
                </a>
                <a asp-action="Delete" asp-controller="Subject" asp-route-id="@Model.Id" class="btn btn-danger me-2">
                    <i class="fas fa-trash-alt"></i> Delete Subject
                </a>
                <a asp-action="Index" asp-controller="Subject" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script src="~/js/auth-scripts.js"></script>
</body>
</html>