@model StudentTrackingSystem.DAL.Models.Subject

@{
    ViewData["Title"] = "Subject Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Student Tracking System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/custom_styles.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
</head>
<body>
    <div class="container mt-4">
        <h1 class="page-title">Subject Details</h1>

        <div class="card shadow-sm subject-details-card">
            <div class="card-header bg-light-blue text-white">
                <h4 class="mb-0">@Model.Name</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <dl class="row">
                            <dt class="col-sm-3 detail-label">Name:</dt>
                            <dd class="col-sm-9">@Model.Name</dd>

                            <dt class="col-sm-3 detail-label">Grade:</dt>
                            <dd class="col-sm-9">@Model.Grade?.Name</dd>

                            <dt class="col-sm-3 detail-label">Teachers:</dt>
                            <dd class="col-sm-9">
                                @if (Model.Teatchers != null && Model.Teatchers.Any())
                                {
                                    <ul class="list-unstyled">
                                        @foreach (var teacher in Model.Teatchers)
                                        {
                                            <li><i class="fas fa-chalkboard-teacher me-2"></i>@teacher.FullName</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span>No teachers assigned</span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="card-footer text-center action-buttons-group">
                <a asp-action="Edit" asp-controller="Subject" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                    <i class="fas fa-edit"></i> Edit Subject
                </a>
                <a asp-action="Delete" asp-controller="Subject" asp-route-id="@Model.Id" class="btn btn-danger me-2">
                    <i class="fas fa-trash-alt"></i> Delete Subject
                </a>
                <a asp-action="Index" asp-controller="Subject" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

<style>
    .subject-details-card .card-header {
        background-color: var(--primary-color);
    }

    .detail-label {
        font-weight: 600;
        color: var(--primary-color-dark);
    }

    dl.row dd {
        margin-bottom: .5rem;
    }
</style>