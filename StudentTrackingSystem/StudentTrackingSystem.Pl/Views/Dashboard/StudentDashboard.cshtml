@{
    ViewData["Title"] = "Student Dashboard";
    Layout = "_StudentLayout";
}

<!-- Floating Particles Background -->
<div class="particles" id="particles-js"></div>

<!-- Navigation -->
<nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
        <a asp-controller="Account" asp-action="Logout" class="navbar-brand text-white me-auto">
            <i class="bi bi-box-arrow-left"></i>
        </a>

        <div class="navbar-brand mx-auto position-absolute start-50 translate-middle-x">
            <span class="h4 mb-0">Student Dashboard</span>
            <span class="badge bg-warning text-dark ms-2">Student</span>
        </div>

        <div class="ms-auto d-flex align-items-center">
            <!-- Notification Bell with Enhanced Popup -->
            <div class="notification-container me-3 position-relative">
                <a href="#" class="text-white position-relative" id="notification-bell">
                    <i class="bi bi-bell-fill fs-5"></i>
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" id="notification-count" style="font-size: 10px;">
                        3
                    </span>
                </a>

                <!-- Notification Backdrop -->
                <div class="notification-backdrop"></div>

                <!-- Notification Popup -->
                <div class="notification-popup">
                    <div class="notification-header">
                        <h5>Notifications</h5>
                        <a href="#" class="mark-all-read">Mark all as read</a>
                    </div>
                    <div class="notification-list">
                        <div class="notification-item unread">
                            <i class="bi bi-exclamation-circle text-warning"></i>
                            <div class="notification-content">
                                <p>Math assignment due tomorrow</p>
                                <small>10 minutes ago</small>
                            </div>
                        </div>
                        <div class="notification-item">
                            <i class="bi bi-check-circle text-success"></i>
                            <div class="notification-content">
                                <p>Science quiz graded - 92%</p>
                                <small>1 hour ago</small>
                            </div>
                        </div>
                        <div class="notification-item unread">
                            <i class="bi bi-megaphone text-info"></i>
                            <div class="notification-content">
                                <p>School event on Friday - Don't forget!</p>
                                <small>3 hours ago</small>
                            </div>
                        </div>
                        <div class="notification-item">
                            <i class="bi bi-book text-primary"></i>
                            <div class="notification-content">
                                <p>New resources uploaded for History class</p>
                                <small>Yesterday</small>
                            </div>
                        </div>
                    </div>
                    <div class="notification-footer">
                        <a href="#">View all notifications</a>
                    </div>
                </div>
            </div>
            <a href="#" class="text-white me-3" id="theme-toggle">
                <i class="bi bi-moon fs-5" style="margin-left: 6px !important;"></i>
            </a>
            <div class="dropdown">
                <a href="#" class="dropdown-toggle text-white" id="userDropdown" data-bs-toggle="dropdown">
                    <i class="bi bi-person-circle fs-5"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><h6 class="dropdown-header">Student Profile</h6></li>
                    <li><a class="dropdown-item" asp-controller="Profile" asp-action="Index"><i class="bi bi-person me-2"></i>My Profile</a></li>
                    <li><a class="dropdown-item" asp-controller="Settings" asp-action="Index"><i class="bi bi-gear me-2"></i>Settings</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout"><i class="bi bi-box-arrow-right me-2"></i>Logout</a></li>
                </ul>
            </div>
        </div>
    </div>
</nav>

<!-- Hero Section -->
<div class="header-background">
    <div class="header-content">
        <h1>Welcome to Your Student Dashboard</h1>
        <p>Track your academic progress and manage your learning</p>
    </div>
</div>

<!-- Main Content -->
<div class="container-fluid content-wrapper">
    <!-- Quick Actions -->
    <div class="quick-actions mb-5">
        <div class="container">
            <h2 class="section-title mb-4">Quick Actions</h2>
            <div class="row g-3">
                <div class="col-md-3">
                    <a asp-controller="Assignment" asp-action="StudentAssignments" class="quick-action-card">
                        <div class="icon-wrapper bg-primary">
                            <i class="bi bi-journal-text"></i>
                        </div>
                        <span>View Assignments</span>
                    </a>
                </div>
                <div class="col-md-3">
                    <a asp-controller="Grades" asp-action="Index" class="quick-action-card">
                        <div class="icon-wrapper bg-success">
                            <i class="bi bi-graph-up"></i>
                        </div>
                        <span>Check Grades</span>
                    </a>
                </div>
                <div class="col-md-3">
                    <a asp-controller="Schedule" asp-action="Index" class="quick-action-card">
                        <div class="icon-wrapper bg-warning">
                            <i class="bi bi-calendar-week"></i>
                        </div>
                        <span>Class Schedule</span>
                    </a>
                </div>
                <div class="col-md-3">
                    <a asp-controller="Messages" asp-action="Index" class="quick-action-card">
                        <div class="icon-wrapper bg-info">
                            <i class="bi bi-chat-left-text"></i>
                        </div>
                        <span>Messages</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Features -->
    <div class="main-features mb-5">
        <div class="container">
            <h2 class="section-title mb-4">Learning Tools</h2>
            <div class="row g-4">
                <!-- Feature Cards -->
                <div class="col-md-4">
                    <div class="feature-card" data-link="@Url.Action("StudentAssignments", "Assignment")">
                        <div class="card-icon">
                            <i class="bi bi-journal-text"></i>
                        </div>
                        <h3>Assignments</h3>
                        <p>View and submit your current assignments</p>
                        <div class="card-footer">
                            <span class="badge bg-primary">4 Pending</span>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="feature-card" data-link="@Url.Action("Index", "Grades")">
                        <div class="card-icon">
                            <i class="bi bi-graph-up"></i>
                        </div>
                        <h3>Grades</h3>
                        <p>Check your grades and academic progress</p>
                        <div class="card-footer">
                            <span class="badge bg-success">88% Average</span>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="feature-card" data-link="@Url.Action("Index", "Schedule")">
                        <div class="card-icon">
                            <i class="bi bi-calendar-week"></i>
                        </div>
                        <h3>Class Schedule</h3>
                        <p>View your weekly class schedule</p>
                        <div class="card-footer">
                            <span class="badge bg-warning">5 Classes</span>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="feature-card" data-link="@Url.Action("Index", "Resources")">
                        <div class="card-icon">
                            <i class="bi bi-collection"></i>
                        </div>
                        <h3>Learning Resources</h3>
                        <p>Access study materials and resources</p>
                        <div class="card-footer">
                            <span class="badge bg-info">12 Available</span>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="feature-card" data-link="@Url.Action("Index", "Attendance")">
                        <div class="card-icon">
                            <i class="bi bi-calendar-check"></i>
                        </div>
                        <h3>Attendance</h3>
                        <p>View your attendance records</p>
                        <div class="card-footer">
                            <span class="badge bg-danger">95% Rate</span>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="feature-card" data-link="@Url.Action("Index", "Messages")">
                        <div class="card-icon">
                            <i class="bi bi-chat-left-text"></i>
                        </div>
                        <h3>Messages</h3>
                        <p>Communicate with teachers and peers</p>
                        <div class="card-footer">
                            <span class="badge bg-secondary">3 Unread</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="recent-activity mb-5">
        <div class="container">
            <h2 class="section-title mb-4">Recent Activity</h2>
            <div class="row">
                <div class="col-md-8">
                    <div class="activity-card">
                        <div class="activity-header">
                            <h3>Today's Schedule</h3>
                            <a asp-controller="Schedule" asp-action="Index" class="btn btn-sm btn-outline-primary">Full Schedule</a>
                        </div>
                        <ul class="schedule-list">
                            <li>
                                <div class="schedule-time">08:00 - 09:30</div>
                                <div class="schedule-class">
                                    <strong>Mathematics</strong>
                                    <span>Room 205 - Mr. Smith</span>
                                </div>
                                <div class="schedule-status">
                                    <span class="badge bg-success">Completed</span>
                                </div>
                            </li>
                            <li>
                                <div class="schedule-time">10:00 - 11:30</div>
                                <div class="schedule-class">
                                    <strong>Science</strong>
                                    <span>Room 112 - Ms. Johnson</span>
                                </div>
                                <div class="schedule-status">
                                    <span class="badge bg-warning">In Progress</span>
                                </div>
                            </li>
                            <li>
                                <div class="schedule-time">13:00 - 14:30</div>
                                <div class="schedule-class">
                                    <strong>History</strong>
                                    <span>Room 301 - Mr. Brown</span>
                                </div>
                                <div class="schedule-status">
                                    <span class="badge bg-secondary">Upcoming</span>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="upcoming-card">
                        <div class="upcoming-header">
                            <h3>Upcoming Assignments</h3>
                            <span class="badge bg-primary">3 Due Soon</span>
                        </div>
                        <ul class="upcoming-list">
                            <li>
                                <div class="upcoming-class">Math</div>
                                <div class="upcoming-title">Algebra Quiz</div>
                                <div class="upcoming-due">Due: Tomorrow</div>
                            </li>
                            <li>
                                <div class="upcoming-class">Science</div>
                                <div class="upcoming-title">Lab Report</div>
                                <div class="upcoming-due">Due: Friday</div>
                            </li>
                            <li>
                                <div class="upcoming-class">English</div>
                                <div class="upcoming-title">Essay Draft</div>
                                <div class="upcoming-due">Due: Next Monday</div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Footer -->
<footer class="footer">
    <div class="container">
        <div class="footer-content">
            <div class="row">
                <div class="col-md-4">
                    <h4>Student Dashboard</h4>
                    <p>Comprehensive tools for students to track and enhance their learning experience.</p>
                </div>
                <div class="col-md-4">
                    <h5>Student Resources</h5>
                    <ul class="footer-links">
                        <li><a href="#">Study Guides</a></li>
                        <li><a href="#">Academic Calendar</a></li>
                        <li><a href="#">Library Resources</a></li>
                        <li><a href="#">Tutoring Services</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>Support</h5>
                    <ul class="footer-contact">
                        <li><i class="bi bi-envelope"></i> studentsupport@school.edu</li>
                        <li><i class="bi bi-telephone"></i> (123) 456-7890 (Ext. 1)</li>
                        <li><i class="bi bi-clock"></i> Mon-Fri: 8AM-4PM</li>
                    </ul>
                </div>
            </div>
            <div class="footer-bottom">
                <div class="social-icons">
                    <a href="#"><i class="bi bi-question-circle"></i> Help Center</a>
                    <a href="#"><i class="bi bi-book"></i> Student Handbook</a>
                </div>
                <p class="copyright">© @DateTime.Now.Year Student Tracking System. All rights reserved.</p>
            </div>
        </div>
    </div>
</footer>

<!-- Back to Top Button -->
<button id="back-to-top" class="btn btn-primary rounded-circle">
    <i class="bi bi-arrow-up"></i>
</button>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/studentDashboard.js" asp-append-version="true"></script>
}