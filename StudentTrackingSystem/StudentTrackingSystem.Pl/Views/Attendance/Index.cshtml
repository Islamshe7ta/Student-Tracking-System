@{
    ViewData["Title"] = "Attendance System";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Attendance Management</h2>

    <!-- Quick Stats -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <i class="bi bi-people" style="font-size: 2rem;"></i>
                    <h5 class="mt-2">Total Students</h5>
                    <h3 class="mb-0">@ViewBag.TodayAttendance</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <i class="bi bi-person-check" style="font-size: 2rem;"></i>
                    <h5 class="mt-2">Present Today</h5>
                    <h3 class="mb-0">@ViewBag.PresentToday</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body text-center">
                    <i class="bi bi-person-x" style="font-size: 2rem;"></i>
                    <h5 class="mt-2">Absent Today</h5>
                    <h3 class="mb-0">@ViewBag.AbsentToday</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body text-center">
                    <i class="bi bi-hourglass-split" style="font-size: 2rem;"></i>
                    <h5 class="mt-2">Not Marked</h5>
                    <h3 class="mb-0">@ViewBag.NotMarkedToday</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Alerts Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Important Notices
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info mb-2">
                        <i class="bi bi-info-circle"></i> Today's attendance deadline: 9:00 AM
                    </div>
                    <div class="alert alert-warning mb-2">
                        <i class="bi bi-exclamation-circle"></i> Students with 3+ absences this month need attention
                    </div>
                    <div class="alert alert-success mb-0">
                        <i class="bi bi-check-circle"></i> Monthly attendance report is ready
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Existing Cards -->
    <div class="row">
        <!-- Mark Attendance -->
        <div class="col-md-6 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-person-plus"></i> Mark Attendance
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-3">
                        <a asp-action="AddAttendance" class="btn btn-outline-primary btn-lg">
                            <i class="bi bi-person-plus"></i>
                            Single Student
                            <small class="d-block text-muted">Mark attendance for one student</small>
                        </a>
                        <a asp-action="BatchAttendance" class="btn btn-outline-primary btn-lg">
                            <i class="bi bi-people"></i>
                            Multiple Students
                            <small class="d-block text-muted">Mark attendance for a group of students</small>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- View Records -->
        <div class="col-md-6 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-calendar-check"></i> View Records
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-3">
                        <a asp-action="ShowAttendance" class="btn btn-outline-success btn-lg">
                            <i class="bi bi-calendar-check"></i>
                            Daily Records
                            <small class="d-block text-muted">View daily attendance records</small>
                        </a>
                        <a asp-action="AttendanceStats" class="btn btn-outline-success btn-lg">
                            <i class="bi bi-graph-up"></i>
                            Statistics
                            <small class="d-block text-muted">View attendance statistics and reports</small>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Info -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle"></i> Quick Info
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="text-center">
                                <i class="bi bi-person-plus text-primary" style="font-size: 2rem;"></i>
                                <h5 class="mt-2">Single Entry</h5>
                                <p class="text-muted">Mark attendance for one student at a time</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center">
                                <i class="bi bi-people text-success" style="font-size: 2rem;"></i>
                                <h5 class="mt-2">Group Entry</h5>
                                <p class="text-muted">Mark attendance for multiple students at once</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center">
                                <i class="bi bi-graph-up text-info" style="font-size: 2rem;"></i>
                                <h5 class="mt-2">Reports</h5>
                                <p class="text-muted">View attendance statistics and reports</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add hover effect to cards
            $('.card').hover(
                function() { $(this).addClass('shadow'); },
                function() { $(this).removeClass('shadow'); }
            );
        });
    </script>
} 