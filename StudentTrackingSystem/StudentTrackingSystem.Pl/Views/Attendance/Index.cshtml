@{
    ViewData["Title"] = "Attendance System";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Student Tracking System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/common.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Particles Background -->
    <div class="particles" id="particles-js"></div>

    <a href="javascript:history.back()" class="back-button">
        <i class="fas fa-arrow-left"></i> Back
    </a>

    <div class="main-content">
        <div class="container">
            <div class="row">
                <div class="col-md-10 mx-auto">
                    <!-- Stats Section -->
                    <div class="card border-0 shadow-lg mb-5">
                        <div class="card-header bg-primary-gradient text-white py-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <h3 class="h5 mb-0 fw-semibold">
                                    <i class="fas fa-chart-bar me-2"></i>Attendance Overview
                                </h3>
                            </div>
                        </div>
                        <div class="card-body p-4">
                            <div class="row g-4">
                                <!-- Total Students Card -->
                                <div class="col-md-3">
                                    <div class="card h-100 border-0 shadow-sm hover-effect">
                                        <div class="card-body text-center p-4">
                                            <div class="icon-lg bg-primary bg-opacity-10 text-primary rounded-circle mb-3 mx-auto">
                                                <i class="fas fa-users fa-fw"></i>
                                            </div>
                                            <h4 class="h6 fw-semibold mb-2">Total Students</h4>
                                            <h3 class="mb-0">@ViewBag.TodayAttendance</h3>
                                        </div>
                                    </div>
                                </div>

                                <!-- Present Today Card -->
                                <div class="col-md-3">
                                    <div class="card h-100 border-0 shadow-sm hover-effect">
                                        <div class="card-body text-center p-4">
                                            <div class="icon-lg bg-success bg-opacity-10 text-success rounded-circle mb-3 mx-auto">
                                                <i class="fas fa-user-check fa-fw"></i>
                                            </div>
                                            <h4 class="h6 fw-semibold mb-2">Present Today</h4>
                                            <h3 class="mb-0">@ViewBag.PresentToday</h3>
                                        </div>
                                    </div>
                                </div>

                                <!-- Absent Today Card -->
                                <div class="col-md-3">
                                    <div class="card h-100 border-0 shadow-sm hover-effect">
                                        <div class="card-body text-center p-4">
                                            <div class="icon-lg bg-danger bg-opacity-10 text-danger rounded-circle mb-3 mx-auto">
                                                <i class="fas fa-user-times fa-fw"></i>
                                            </div>
                                            <h4 class="h6 fw-semibold mb-2">Absent Today</h4>
                                            <h3 class="mb-0">@ViewBag.AbsentToday</h3>
                                        </div>
                                    </div>
                                </div>

                                <!-- Not Marked Card -->
                                <div class="col-md-3">
                                    <div class="card h-100 border-0 shadow-sm hover-effect">
                                        <div class="card-body text-center p-4">
                                            <div class="icon-lg bg-warning bg-opacity-10 text-warning rounded-circle mb-3 mx-auto">
                                                <i class="fas fa-clock fa-fw"></i>
                                            </div>
                                            <h4 class="h6 fw-semibold mb-2">Not Marked</h4>
                                            <h3 class="mb-0">@ViewBag.NotMarkedToday</h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Actions Section -->
                    <div class="card border-0 shadow-lg mb-5">
                        <div class="card-header bg-success-gradient text-white py-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <h3 class="h5 mb-0 fw-semibold">
                                    <i class="fas fa-tasks me-2"></i>Attendance Actions
                                </h3>
                            </div>
                        </div>
                        <div class="card-body p-4">
                            <div class="row g-4">
                                <!-- Mark Attendance Card -->
                                <div class="col-md-6">
                                    <div class="card h-100 border-0 shadow-sm hover-effect">
                                        <div class="card-body text-center p-4">
                                            <div class="icon-lg bg-primary bg-opacity-10 text-primary rounded-circle mb-3 mx-auto">
                                                <i class="fas fa-user-plus fa-fw"></i>
                                            </div>
                                            <h4 class="h6 fw-semibold mb-2">Mark Attendance</h4>
                                            <p class="text-muted small mb-3">Record student attendance for today</p>
                                            <div class="d-grid gap-2">
                                                <a asp-action="AddAttendance" class="btn btn-sm btn-primary rounded-pill px-4 btn-hover">
                                                    <i class="fas fa-user-plus me-1"></i> Single Student
                                                </a>
                                                <a asp-action="BatchAttendance" class="btn btn-sm btn-primary rounded-pill px-4 btn-hover">
                                                    <i class="fas fa-users me-1"></i> Multiple Students
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- View Records Card -->
                                <div class="col-md-6">
                                    <div class="card h-100 border-0 shadow-sm hover-effect">
                                        <div class="card-body text-center p-4">
                                            <div class="icon-lg bg-success bg-opacity-10 text-success rounded-circle mb-3 mx-auto">
                                                <i class="fas fa-calendar-check fa-fw"></i>
                                            </div>
                                            <h4 class="h6 fw-semibold mb-2">View Records</h4>
                                            <p class="text-muted small mb-3">Access attendance records and statistics</p>
                                            <div class="d-grid gap-2">
                                                <a asp-action="ShowAttendance" class="btn btn-sm btn-success rounded-pill px-4 btn-hover">
                                                    <i class="fas fa-calendar-day me-1"></i> Daily Records
                                                </a>
                                                <a asp-action="AttendanceStats" class="btn btn-sm btn-success rounded-pill px-4 btn-hover">
                                                    <i class="fas fa-chart-line me-1"></i> Statistics
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script src="~/js/auth-scripts.js"></script>
</body>
</html>

<style>
    .icon-lg {
        width: 60px;
        height: 60px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        transition: all 0.3s ease;
    }

    .hover-effect {
        transition: all 0.3s ease;
        border-top: 3px solid transparent;
    }

    .hover-effect:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }

    .hover-effect:hover .icon-lg {
        transform: scale(1.1);
    }

    .bg-primary-gradient {
        background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
    }

    .bg-success-gradient {
        background: linear-gradient(135deg, #1cc88a 0%, #13855c 100%);
    }

    .card-header {
        border-bottom: none;
    }

    .btn-hover {
        transition: all 0.3s ease;
    }

    .btn-hover:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }
</style>