@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Access Denied | Student Tracking System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta charset="UTF-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/auth-styles.css" />
    <style>
        .access-denied-container {
            text-align: center;
            padding: 2rem;
        }

        .access-denied-icon {
            font-size: 5rem;
            color: #dc3545;
            margin-bottom: 1.5rem;
            animation: shake 0.5s ease-in-out infinite alternate;
        }

        .access-denied-title {
            color: #dc3545;
            font-weight: 700;
            margin-bottom: 1rem;
        }

        .access-denied-message {
            color: var(--text-dark);
            margin-bottom: 2rem;
        }

        .error-code {
            color: var(--text-muted);
            font-size: 0.9rem;
        }

        @@keyframes shake {
            from {
                transform: rotate(-5deg);
            }
            to {
                transform: rotate(5deg);
            }
        }
    </style>
</head>
<body>
    <!-- Floating Particles Background -->
    <div class="particles" id="particles-js"></div>

    <div class="auth-container">
        <div class="access-denied-container">
            <div class="access-denied-icon">
                <i class="bi bi-shield-lock"></i>
            </div>
            <h1 class="access-denied-title">Access Denied</h1>
            <p class="access-denied-message">You don't have permission to access this resource.</p>
            <div class="d-grid gap-2">
                @if (User.IsInRole("Admin"))
                {
                    <a href="/Admin/Dashboard" class="auth-btn">
                        <i class="bi bi-speedometer2"></i> Back to Admin Dashboard
                    </a>
                }
                else if (User.IsInRole("Teatcher"))
                {
                    <a href="/Profile" class="auth-btn">
                        <i class="bi bi-person-circle"></i> Back to Teacher Dashboard
                    </a>
                }
                else if (User.IsInRole("Student"))
                {
                    <a href="/Profile" class="auth-btn">
                        <i class="bi bi-person-circle"></i> Back to Student Dashboard
                    </a>
                }
                else
                {
                    <a href="/" class="auth-btn">
                        <i class="bi bi-arrow-left"></i> Back to Home
                    </a>
                }
            </div>
            <p class="error-code mt-3">Error code: 403 Forbidden</p>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script src="~/js/auth-scripts.js"></script>
</body>
</html> 