@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Student Tracking System</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom shadow-sm mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">Student Tracking System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Student" asp-action="Index">👨‍🎓 Students</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Teatcher" asp-action="Index">👨‍🏫 Teachers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Subject" asp-action="Index">📚 Subjects</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Attendance" asp-action="Index">
                                <i class="bi bi-calendar-check"></i> Attendance
                            </a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="assignmentDropdown" role="button" data-bs-toggle="dropdown">
                                    📚 Assignments
                                </a>
                                <ul class="dropdown-menu">
                                    <li><h6 class="dropdown-header">Teacher View</h6></li>
                                    <li><a class="dropdown-item" asp-controller="Assignment" asp-action="Create">📝 Add Assignment</a></li>
                                    <li><a class="dropdown-item" asp-controller="Assignment" asp-action="TeacherAssignments">📋 Teacher Assignments</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><h6 class="dropdown-header">Student View</h6></li>
                                    <li><a class="dropdown-item" asp-controller="Assignment" asp-action="StudentAssignments">📚 Student Assignments</a></li>
                                </ul>
                            </li>
                           
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="quizDropdown" role="button" data-bs-toggle="dropdown">
                                    📝 Quizzes
                                </a>
                                <ul class="dropdown-menu">
                                    <li><h6 class="dropdown-header">Teacher View</h6></li>
                                    <li><a class="dropdown-item" asp-controller="Quiz" asp-action="Create">📝 Create Quiz</a></li>
                                    <li><a class="dropdown-item" asp-controller="Quiz" asp-action="Index">📋 All Quizzes</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><h6 class="dropdown-header">Student View</h6></li>
                                    <li><a class="dropdown-item" asp-controller="Quiz" asp-action="StudentQuizzes">📚 Available Quizzes</a></li>
                                    <li><a class="dropdown-item" asp-controller="Quiz" asp-action="StudentResults">📊 My Results</a></li>
                                </ul>
                            </li>
                        }
                        @if (User.IsInRole("Teachr"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Assignment" asp-action="Create">📝 Add Assignment</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Assignment" asp-action="TeacherAssignments">📋 My Assignments</a>
                            </li>
                           
                        }
                        @if (User.IsInRole("Studnt"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Assignment" asp-action="StudentAssignments">📚 My Assignments</a>
                            </li>
                          
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Profile" asp-action="Index">
                                    <i class="bi bi-person-circle"></i> My Profile
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="SignOut">
                                    <i class="bi bi-box-arrow-right"></i> Logout
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="SignIn">
                                    <i class="bi bi-box-arrow-in-right"></i> Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container pb-3">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted text-center py-3 bg-light">
        <div class="container">
            &copy; @DateTime.Now.Year - Student Tracking System
        </div>
    </footer>

    <!-- Bootstrap JS (with Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Site JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
