@using StudentTrackingSystem.DAL.Models
@model Teatcher
@{
    ViewData["Title"] = "لوحة تحكم المعلم";
}

<div class="container mt-4">
    <div class="row">
        <!-- Profile Card -->
        <div class="col-md-4">
            <div class="card shadow mb-4">
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="bi bi-person-circle" style="font-size: 5rem;"></i>
                    </div>
                    <h3 class="card-title mb-3">@Model.FullName</h3>
                    <p class="text-muted mb-3">@Model.Subject</p>
                    <div class="text-start">
                        <p class="mb-2"><i class="bi bi-envelope me-2"></i> @Model.Email</p>
                        <p class="mb-2"><i class="bi bi-telephone me-2"></i> @Model.PhoneNumber</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="col-md-8">
            <div class="row">
                <!-- Total Students Card -->
                <div class="col-md-6 mb-4">
                    <div class="card shadow h-100">
                        <div class="card-body text-center">
                            <h3 class="text-primary">@ViewBag.TotalStudents</h3>
                            <p class="text-muted">إجمالي الطلاب</p>
                        </div>
                    </div>
                </div>

                <!-- Total Classes Card -->
                <div class="col-md-6 mb-4">
                    <div class="card shadow h-100">
                        <div class="card-body text-center">
                            <h3 class="text-success">@ViewBag.TotalClasses</h3>
                            <p class="text-muted">إجمالي الحصص</p>
                        </div>
                    </div>
                </div>

                <!-- Average Attendance Card -->
                <div class="col-md-6 mb-4">
                    <div class="card shadow h-100">
                        <div class="card-body text-center">
                            <h3 class="text-info">@ViewBag.AverageAttendance%</h3>
                            <p class="text-muted">متوسط نسبة الحضور</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Classes Table -->
            <div class="card shadow mt-4">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">آخر الحصص</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>التاريخ</th>
                                    <th>الصف</th>
                                    <th>الحضور</th>
                                    <th>الغياب</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var classRecord in ViewBag.RecentClasses ?? new List<dynamic>())
                                {
                                    <tr>
                                        <td>@classRecord.Date.ToString("dd/MM/yyyy")</td>
                                        <td>@classRecord.Grade</td>
                                        <td><span class="badge bg-success">@classRecord.PresentCount</span></td>
                                        <td><span class="badge bg-danger">@classRecord.AbsentCount</span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 