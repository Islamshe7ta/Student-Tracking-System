@using StudentTrackingSystem.DAL.Models
@model Student
@{
    ViewData["Title"] = "الملف الشخصي";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="bi bi-person-circle" style="font-size: 5rem;"></i>
                    </div>
                    <h3 class="card-title mb-3">@Model.FullName</h3>
                    <div class="text-start">
                        <p class="mb-2"><i class="bi bi-envelope me-2"></i> @Model.EmailAddress</p>
                        <p class="mb-2"><i class="bi bi-telephone me-2"></i> @Model.PhoneNo</p>
                        <p class="mb-2"><i class="bi bi-geo-alt me-2"></i> @Model.Address</p>
                        <p class="mb-2"><i class="bi bi-mortarboard me-2"></i> @Model.Grade</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 