@using StudentTrackingSystem.DAL.Models
@model Student
@{
    ViewData["Title"] = "Student Profile";
}

<div class="container mt-4">
    <div class="row">
        <!-- Profile Information -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-person-circle" style="font-size: 5rem;"></i>
                    </div>
                    <h4 class="card-title">@Model.FullName</h4>
                    <p class="text-muted">@Model.Grade</p>
                    <hr>
                    <div class="text-start">
                        <p><i class="bi bi-envelope"></i> @Model.EmailAddress</p>
                        <p><i class="bi bi-telephone"></i> @Model.PhoneNo</p>
                        <p><i class="bi bi-geo-alt"></i> @Model.Address</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Attendance Statistics -->
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-calendar-check"></i> Attendance Statistics
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="text-center">
                                <h3 class="text-primary">@ViewBag.TotalDays</h3>
                                <p class="text-muted">Total Days</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center">
                                <h3 class="text-success">@ViewBag.PresentDays</h3>
                                <p class="text-muted">Present Days</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center">
                                <h3 class="text-danger">@ViewBag.AbsentDays</h3>
                                <p class="text-muted">Absent Days</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center">
                                <h3 class="text-info">@ViewBag.AttendanceRate%</h3>
                                <p class="text-muted">Attendance Rate</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Attendance -->
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-clock-history"></i> Recent Attendance
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var attendance in ViewBag.RecentAttendance ?? new List<Attendance>())
                                {
                                    <tr>
                                        <td>@attendance.Date.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            @if (attendance.IsPresent)
                                            {
                                                <span class="badge bg-success">Present</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Absent</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 