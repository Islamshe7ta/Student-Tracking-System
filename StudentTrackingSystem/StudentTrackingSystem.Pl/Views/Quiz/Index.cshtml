@model IEnumerable<StudentTrackingSystem.Pl.DTOs.QuizDetailsDTO>

@{
    ViewData["Title"] = "Quizzes";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="page-title mb-0">Quizzes</h1>
            <p class="text-muted">Manage and monitor your quizzes</p>
        </div>
        @if (User.IsInRole("Teacher") || User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create New Quiz
            </a>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info shadow-sm">
            <i class="fas fa-info-circle me-2"></i>
            No quizzes available at the moment.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var quiz in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm quiz-card">
                        <div class="card-header bg-light">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="card-title mb-0">@quiz.Name</h5>
                                <span class="badge @(quiz.IsActive ? "bg-success" : "bg-secondary")">
                                    @(quiz.IsActive ? "Active" : "Inactive")
                                </span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <div class="d-flex justify-content-between mb-2">
                                    <span><i class="fas fa-graduation-cap text-primary me-2"></i>@quiz.Grade</span>
                                    <span><i class="fas fa-book text-success me-2"></i>@quiz.Subject</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span><i class="fas fa-star text-warning me-2"></i>@quiz.TotalMarks marks</span>
                                    <span><i class="fas fa-user-tie text-info me-2"></i>@quiz.TeacherName</span>
                                </div>
                            </div>
                            <div class="time-info">
                                <div class="mb-2">
                                    <i class="fas fa-play-circle text-success me-2"></i>
                                    <span>Starts: @quiz.StartTime.ToString("dd/MM/yyyy HH:mm")</span>
                                </div>
                                <div>
                                    <i class="fas fa-stop-circle text-danger me-2"></i>
                                    <span>Ends: @quiz.EndTime.ToString("dd/MM/yyyy HH:mm")</span>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-top-0">
                            <div class="d-flex gap-2">
                                <a asp-action="Details" asp-route-id="@quiz.Id" 
                                   class="btn btn-info flex-grow-1">
                                    <i class="fas fa-eye me-1"></i> View
                                </a>
                                @if (User.IsInRole("Teacher") || User.IsInRole("Admin"))
                                {
                                    <a asp-action="Submissions" asp-route-id="@quiz.Id" 
                                       class="btn btn-success flex-grow-1">
                                        <i class="fas fa-list-check me-1"></i> Submissions
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@quiz.Id" method="post" 
                                          onsubmit="return confirm('Are you sure you want to delete this quiz?');" 
                                          class="flex-grow-1">
                                        <button type="submit" class="btn btn-danger w-100">
                                            <i class="fas fa-trash me-1"></i> Delete
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    :root {
        --navy-color: #1a237e;
        --navy-light: #534bae;
    }

    .quiz-card {
        transition: all 0.3s ease;
        border: none;
    }
    .quiz-card:hover {
        transform: translateY(-5px);
    }
    .card-title {
        color: #2c3e50;
        font-weight: 600;
    }
    .badge {
        padding: 0.5em 1em;
    }
    .time-info {
        font-size: 0.9rem;
        color: #6c757d;
    }
    .btn {
        transition: all 0.2s ease;
    }
    .btn:hover {
        transform: translateY(-2px);
    }
    .card-footer .btn {
        padding: 0.5rem;
    }
    .btn-primary {
        background-color: var(--navy-color);
        border-color: var(--navy-color);
    }
    .btn-primary:hover {
        background-color: var(--navy-light);
        border-color: var(--navy-light);
    }
    .text-primary {
        color: var(--navy-color) !important;
    }
</style> 