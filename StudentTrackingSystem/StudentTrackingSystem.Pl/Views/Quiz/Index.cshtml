@{
    ViewData["Title"] = "Quiz Management";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 mx-auto text-center">

            <div class="row g-4">
                <!-- Admin Options -->
                @if (User.IsInRole("Admin"))
                {
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <div class="icon-lg bg-primary bg-opacity-10 text-primary rounded-circle mb-4 mx-auto">
                                    <i class="bi bi-eye"></i>
                                </div>
                                <h3 class="h5">All Quizzes</h3>
                                <p class="text-muted">View and manage all quizzes</p>
                                <a asp-action="Index" class="btn btn-primary stretched-link">View Quizzes</a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <div class="icon-lg bg-success bg-opacity-10 text-success rounded-circle mb-4 mx-auto">
                                    <i class="bi bi-plus-circle"></i>
                                </div>
                                <h3 class="h5">Create Quiz</h3>
                                <p class="text-muted">Create a new quiz for any class</p>
                                <a asp-action="Create" class="btn btn-success stretched-link">Create Quiz</a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <div class="icon-lg bg-info bg-opacity-10 text-info rounded-circle mb-4 mx-auto">
                                    <i class="bi bi-list-check"></i>
                                </div>
                                <h3 class="h5">Submissions</h3>
                                <p class="text-muted">Review student submissions</p>
                                <a asp-action="Submissions" class="btn btn-info stretched-link">View Submissions</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            </div>
        </div>
    </div>
</div>

<style>
    .icon-lg {
        width: 60px;
        height: 60px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
    }

    .card {
        transition: all 0.3s ease;
        border: none;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

    .bg-teacher {
        background-color: #4e73df;
    }

    .btn-teacher {
        background-color: #4e73df;
        color: white;
    }

    .bg-student {
        background-color: #1cc88a;
    }

    .btn-student {
        background-color: #1cc88a;
        color: white;
    }

    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: white;
    }
</style>