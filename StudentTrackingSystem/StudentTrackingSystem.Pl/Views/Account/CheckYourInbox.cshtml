@{
    ViewData["Title"] = "Check Your Inbox";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Check Your Inbox | Student Tracking System</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/auth-styles.css" />
    <style>
        /* Base styles for all devices */
        html, body {
            width: 100%;
            height: 100%;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

        /* Full-screen styling for mobile */
        @@media (max-width: 768px) {
            body {
                display: block;
                padding: 0;
            }

            .auth-container {
                width: 100vw;
                max-width: 100vw;
                min-height: 100vh;
                border-radius: 0;
                box-shadow: none;
                padding: 1.5rem 1rem;
                margin: 0;
            }

            .particles {
                display: none;
            }

            .email-verification-container {
                padding: 1rem;
            }

            .auth-header {
                font-size: 2rem;
            }

            .verification-text {
                font-size: 1.1rem;
            }
        }

        /* Larger screens */
        @@media (min-width: 769px) {
            .auth-container {
                max-width: 500px;
                margin: 1rem auto;
            }
        }

        /* Email verification specific styles */
        .email-verification-container {
            text-align: center;
            padding: 2rem;
        }

        .email-icon {
            font-size: 4rem;
            color: var(--accent-color);
            margin-bottom: 1.5rem;
            animation: pulse 2s infinite;
        }

        .verification-text {
            color: var(--text-dark);
            margin-bottom: 2rem;
            font-size: 1.2rem;
            line-height: 1.6;
        }

        .support-links {
            margin-top: 2rem;
            font-size: 0.9rem;
            color: var(--text-muted);
        }

        .return-home-btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        @@keyframes pulse {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.1);
            }

            100% {
                transform: scale(1);
            }
        }
    </style>
</head>
<body>
    <!-- Floating Particles Background -->
    <div class="particles" id="particles-js"></div>

    <div class="auth-container">
        <div class="email-verification-container">
            <div class="email-icon">
                <i class="bi bi-envelope-check"></i>
            </div>
            <h1 class="auth-header">Check Your Inbox</h1>
            <p class="verification-text">We've sent a verification email to your inbox. Please check your email and follow the instructions to complete the process.</p>

            <div class="d-grid">
                <a href="/" class="auth-btn return-home-btn" style="text-decoration : none">
                    <i class="bi bi-house"></i> RETURN HOME
                </a>
            </div>

            <div class="support-links mt-4">
                <p>Didn't receive an email? <a href="#" class="auth-link">Resend email</a> or <a href="#" class="auth-link">Contact support</a></p>
            </div>
        </div>
    </div>
 

    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script src="~/js/auth-scripts.js"></script>
</body>
</html>