@{
    ViewData["Title"] = "Check Your Phone";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Check Your Phone | Student Tracking System</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/auth-styles.css" />
    <style>
        .phone-verification-container {
            text-align: center;
            padding: 2rem;
        }

        .phone-icon {
            font-size: 4rem;
            color: var(--accent-color);
            margin-bottom: 1.5rem;
            animation: pulse 2s infinite;
        }

        .verification-text {
            color: var(--text-dark);
            margin-bottom: 2rem;
            font-size: 1.5rem;
            font-weight: 500;
        }

        .countdown {
            color: var(--text-muted);
            font-size: 1rem;
        }

        @@keyframes pulse {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.1);
            }

            100% {
                transform: scale(1);
            }
        }
    </style>
</head>
<body>
    <!-- Floating Particles Background -->
    <div class="particles" id="particles-js"></div>

    <div class="auth-container">
        <div class="phone-verification-container">
            <div class="phone-icon">
                <i class="bi bi-phone"></i>
            </div>
            <h1 class="auth-header">Check Your Phone</h1>
            <p class="verification-text">We've sent a verification code to your mobile device.</p>
            <p class="countdown">Code expires in: <span id="countdown">05:00</span></p>

            <div class="d-grid gap-2 mt-4">
                <a href="#" class="auth-btn">
                    <i class="bi bi-arrow-clockwise"></i> Resend Code
                </a>
                <a href="/" class="btn btn-outline-secondary">
                    <i class="bi bi-house"></i> Return Home
                </a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script src="~/js/auth-scripts.js"></script>
    <script>
        // Countdown timer
        let timeLeft = 300; // 5 minutes in seconds
        const countdownElement = document.getElementById('countdown');

        const timer = setInterval(() => {
            timeLeft--;
            const minutes = Math.floor(timeLeft / 60);
            const seconds = timeLeft % 60;
            countdownElement.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;

            if (timeLeft <= 0) {
                clearInterval(timer);
                countdownElement.textContent = "Expired";
                countdownElement.style.color = "var(--danger-color)";
            }
        }, 1000);
    </script>
</body>
</html>