@using StudentTrackingSystem.PL.DTOs
@model ForgetPasswordDTO
@{
    ViewData["Title"] = "Forgot Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Forgot Password | Student Tracking System</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/auth-styles.css" />
    <style>
        /* Base styles for all devices */
        html, body {
            width: 100%;
            height: 100%;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

        /* Full-screen styling for mobile */
        @@media (max-width: 768px) {
            body {
                display: block;
                padding: 0;
            }

            .auth-container {
                width: 100vw;
                max-width: 100vw;
                min-height: 100vh;
                border-radius: 0;
                box-shadow: none;
                padding: 2rem 1rem;
                margin: 0;
            }

            .particles {
                display: none;
            }

            .auth-form {
                padding: 0 0.5rem;
            }

            .auth-header h1 {
                font-size: 2.2rem;
            }
        }

        /* Larger screens */
        @@media (min-width: 769px) {
            .auth-container {
                max-width: 400px;
                margin: 1rem auto;
            }
        }

        /* Prevent horizontal overflow */
        .form-control, .input-group, .auth-btn {
            max-width: 100%;
        }
    </style>
</head>
<body>
    <!-- Floating Particles Background -->
    <div class="particles" id="particles-js"></div>

    <div class="auth-container">
        <div class="auth-header">
            <h1>FORGOT PASSWORD</h1>
            <p class="text-muted">Enter your email to receive a reset link</p>
        </div>

        <form asp-action="SendResetPasswordUrl" method="post" class="auth-form">
            @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
            {
                <div asp-validation-summary="All" class="alert alert-danger mb-3"></div>
            }

            <div class="form-group mb-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                    <input asp-for="Email" class="form-control" placeholder="Email" required />
                </div>
            </div>

            <button type="submit" class="auth-btn mb-3">SEND RESET LINK</button>

            <div class="text-center mt-3">
                <a asp-action="SignIn" class="auth-link">Back to Sign In</a>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script src="~/js/auth-scripts.js"></script>
    @section Validation {
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    }
</body>
</html>