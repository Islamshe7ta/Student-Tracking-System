@using StudentTrackingSystem.PL.DTOs
@model ResetPasswordDTO
@{
    ViewData["Title"] = "Reset Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Reset Password | Student Tracking System</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/auth-styles.css" />
<style>
        /* Full-screen styling for mobile */
        @@media (max-width: 768px) {
            body {
                display: block;
                padding: 0;
            }

            .auth-container {
                width: 100vw;
                max-width: 100vw;
                min-height: 100vh;
                border-radius: 0;
                box-shadow: none;
                padding: 1.5rem 1rem;
                margin: 0;
            }

            .particles {
                display: none;
            }

            .email-verification-container {
                padding: 1rem;
            }

            .auth-header {
                font-size: 2rem;
            }

            .verification-text {
                font-size: 1.1rem;
            }
        }

        /* Larger screens */
        @@media (min-width: 769px) {
            .auth-container {
                max-width: 500px;
                margin: 1rem auto;
            }
        }

</style>
</head>
    
<body>
    <!-- Floating Particles Background -->
    <div class="particles" id="particles-js"></div>

    <div class="auth-container">
        <div class="auth-header">
            <h1>RESET PASSWORD</h1>
            <p class="text-muted">Create your new password</p>
        </div>

        <form asp-action="ResetPassword" method="post" class="auth-form">
            @if (ViewData.ModelState["OldPassword"] != null && ViewData.ModelState["OldPassword"].Errors.Count > 0)
            {
                <div class="alert alert-danger">
                    @foreach (var error in ViewData.ModelState["OldPassword"].Errors)
                    {
                        <div>@error.ErrorMessage</div>
                    }
                </div>
            }


            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                    <input asp-for="NewPassword" type="password" class="form-control" placeholder="New Password" required />
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" required />
                </div>
            </div>

            <button type="submit" class="auth-btn">RESET PASSWORD</button>
        </form>


    </div>

    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script src="~/js/auth-scripts.js"></script>
    @section Validation {
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    }
</body>
</html>